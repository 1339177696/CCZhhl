<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_FFFFFF"
    android:orientation="vertical"
    tools:context=".activity.DefaultSelectorActivity">
    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:layout_height="@dimen/dp_45">
        <ImageView
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_width="@dimen/dp_15"
            android:id="@+id/activity_back"
            android:layout_centerVertical="true"
            android:background="@drawable/dfileselector_icon_activity_back"
            android:layout_height="@dimen/dp_15" />
        <TextView
            android:id="@+id/activity_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/dfileselector_module_name"
            android:textColor="#313131"
            android:textSize="17sp" />
    </RelativeLayout>
    <com.duke.dfileselector.widget.FileSelectorLayout
        android:id="@+id/activity_file_select_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />
</LinearLayout>