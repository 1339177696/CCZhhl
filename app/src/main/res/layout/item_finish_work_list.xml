<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_corners_1"
        android:layout_margin="10dp"
        >

        <LinearLayout
            android:id="@+id/date_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_arc_1"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_margin="10dp"
            android:padding="10dp"
            >

            <TextView
                android:id="@+id/year_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/red"
                tools:text="2019/01"
                android:textSize="12sp"
                />

            <TextView
                android:id="@+id/day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/red"
                tools:text="05"
                android:textSize="22sp"
                android:layout_gravity="center"
                />

        </LinearLayout>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@+id/date_ll"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/iv_1"
            android:layout_marginLeft="15dp"
            tools:text="特种设备（不含电梯）制作单位许可"
            android:textColor="@color/title_text"
            android:textSize="16sp"
            />

        <ImageView
            android:id="@+id/iv_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@+id/date_ll"
            app:layout_constraintBottom_toTopOf="@+id/iv_2"
            android:layout_marginLeft="15dp"
            app:layout_constraintTop_toBottomOf="@+id/title"
            android:src="@mipmap/unit"
            />

        <TextView
            android:id="@+id/entity_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@+id/iv_1"
            app:layout_constraintTop_toTopOf="@+id/iv_1"
            app:layout_constraintBottom_toBottomOf="@+id/iv_1"
            tools:text="申请单位：长春市宏日新能源有限责任公司"
            android:textSize="12dp"
            android:layout_marginLeft="5dp"
            />


        <ImageView
            android:id="@+id/iv_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/iv_1"
            app:layout_constraintLeft_toRightOf="@+id/date_ll"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginLeft="15dp"
            android:src="@mipmap/opinion"
            />

        <TextView
            android:id="@+id/opinion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@+id/iv_2"
            app:layout_constraintTop_toTopOf="@+id/iv_2"
            app:layout_constraintBottom_toBottomOf="@+id/iv_2"
            tools:text="评审意见：整体良好，部分有待加强"
            android:maxLines="1"
            android:textSize="12dp"
            android:layout_marginLeft="5dp"
            />
        <TextView
            android:id="@+id/tv_preview"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="预览"
            android:textSize="16dp"
            android:layout_margin="10dp"
            android:padding="5dp"
            android:textColor="@color/blue"
            />
        <TextView
            android:id="@+id/state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_corners_2"
            app:layout_constraintBottom_toBottomOf="@+id/date_ll"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="20dp"
            android:text="整改"
            android:textColor="@color/write"
            android:textSize="12sp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            />




    </android.support.constraint.ConstraintLayout>






</LinearLayout>