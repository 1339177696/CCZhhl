<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/bg_all"
    android:layout_height="match_parent">
    <RelativeLayout
    android:layout_width="match_parent"
    android:background="#FFFFFF"
    android:id="@+id/ama_iv_back"
    android:gravity="center_vertical"
    android:layout_height="@dimen/dp_53">
    <ImageView
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_width="@dimen/dp_15"

        android:layout_centerVertical="true"
        android:background="@mipmap/ic_left"
        android:layout_height="@dimen/dp_15" />
    <TextView
        android:id="@+id/tv_top"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="日程详情"
        android:textColor="#ff313131"
        android:textSize="@dimen/sp_17" />

        <TextView
            android:id="@+id/tv_bianji"
            android:textColor="#ff313131"
            android:textSize="@dimen/sp_17"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="编辑"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
</RelativeLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/dp_15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_10"
        android:background="@color/white"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:id="@+id/my_r1_x"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45">
            <TextView
                android:drawableLeft="@mipmap/qj_leibie_icon_qgl"
                android:text="全天"
                android:drawablePadding="@dimen/dp_5"
                android:gravity="center"
                android:textSize="@dimen/dp_13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="#313131"
                />
            <Switch
                android:id="@+id/sw_select"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:thumb="@drawable/l_switch_thumb"
                android:track="@drawable/l_switch_track"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_weight="1"/>

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:background="@color/color_xian"
            android:layout_height="@dimen/dp_0_5"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            >
            <TextView
                android:id="@+id/tv_select_time_title"
                android:text="开始时间"
                android:drawablePadding="@dimen/dp_5"
                android:textSize="@dimen/dp_13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="#313131"
                android:gravity="center"
                android:drawableLeft="@mipmap/qj_kaishi_time_icon"
                />
            <TextView
                android:layout_toLeftOf="@+id/img_start"
                android:layout_toRightOf="@id/tv_select_time_title"
                android:id="@+id/tv_select_time"
                android:textSize="@dimen/dp_14"
                android:gravity="right|center_vertical"
                android:hint="请选择开始时间"
                android:drawablePadding="@dimen/dp_5"
                android:paddingLeft="@dimen/dp_10"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <ImageView
                android:id="@+id/img_start"
                android:layout_marginRight="@dimen/dp_5"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:src="@mipmap/ic_right"
                android:layout_width="@dimen/dp_17"
                android:layout_height="@dimen/dp_17" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:background="@color/color_xian"
            android:layout_height="@dimen/dp_0_5"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            >
            <TextView
                android:id="@+id/tv_select_time_title2"
                android:text="结束时间"
                android:drawablePadding="@dimen/dp_5"
                android:textSize="@dimen/dp_13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="#313131"
                android:gravity="center"
                android:drawableLeft="@mipmap/qj_jieshu_time_icon"
                />
            <TextView
                android:layout_toLeftOf="@+id/img_end"
                android:layout_toRightOf="@id/tv_select_time_title2"
                android:id="@+id/tv_select_time2"
                android:textSize="@dimen/dp_14"
                android:gravity="right|center_vertical"
                android:hint="请选择结束时间"
                android:drawablePadding="@dimen/dp_5"
                android:paddingLeft="@dimen/dp_10"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <ImageView
                android:id="@+id/img_end"
                android:layout_marginRight="@dimen/dp_5"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:src="@mipmap/ic_right"
                android:layout_width="@dimen/dp_17"
                android:layout_height="@dimen/dp_17"  />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:background="@color/color_xian"
            android:layout_height="@dimen/dp_0_5"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/dp_15"
            >
            <TextView
                android:drawableLeft="@mipmap/qj_shiyou_icon_qgl"
                android:id="@+id/tv_schedule_content"
                android:text="内容"
                android:drawablePadding="@dimen/dp_5"
                android:gravity="center"
                android:textSize="@dimen/dp_13"
                android:textColor="#313131"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                />
            <EditText
                android:layout_marginBottom="@dimen/dp_10"
                android:id="@+id/edit_content"
                android:gravity="start|top"
                android:textColor="@color/black"
                android:maxLength="100"
                android:textSize="@dimen/dp_13"
                android:layout_marginTop="@dimen/dp_15"
                android:padding="@dimen/dp_10"
                android:background="@drawable/edit_background"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_100" />
        </LinearLayout>
        <!--<Button-->
        <!--android:layout_marginBottom="@dimen/dp_145"-->
        <!--android:layout_marginTop="@dimen/dp_43"-->
        <!--android:id="@+id/btn_select_complete"-->
        <!--android:layout_width="match_parent"-->
        <!--android:text="完成"-->
        <!--android:textColor="#ffffff"-->
        <!--android:textSize="@dimen/sp_14"-->
        <!--android:layout_height="@dimen/dp_30"-->
        <!--android:background="@drawable/l_leave_submit_bg"-->
        <!--/>-->
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/rl_remind"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:background="@color/white"
        android:paddingLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        >
        <TextView
            android:id="@+id/tv_select_time_title3"
            android:text="提醒"
            android:drawablePadding="@dimen/dp_5"
            android:textSize="@dimen/dp_13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="#313131"
            android:gravity="center"
            android:drawableLeft="@mipmap/qj_shiyou_icon_qgl"
            />
        <TextView
            android:layout_toLeftOf="@+id/img_remind"
            android:id="@+id/tv_remind"
            android:layout_toRightOf="@id/tv_select_time_title3"
            android:textSize="@dimen/dp_14"
            android:text="提前30分钟"
            android:gravity="right|center_vertical"
            android:drawablePadding="@dimen/dp_5"
            android:paddingLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/img_remind"
            android:layout_marginRight="@dimen/dp_12"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@mipmap/ic_right"
            android:layout_width="@dimen/dp_17"
            android:layout_height="@dimen/dp_17"  />
    </RelativeLayout>
    <Button
        android:layout_marginTop="@dimen/dp_50"
        android:id="@+id/btn_select_complete"
        android:textSize="@dimen/sp_14"
        android:text="删除日程"
        android:layout_width="@dimen/dp_220"
        android:layout_height="@dimen/dp_36"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/l_leave_submit_bg1"
        android:textColor="@color/white"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_20"
        android:layout_centerHorizontal="true"
        />
</LinearLayout>