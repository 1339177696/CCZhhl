<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:layout_height="@dimen/dp_45">
        <ImageView
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_width="@dimen/dp_15"
            android:id="@+id/iv_back"
            android:layout_centerVertical="true"
            android:background="@mipmap/ic_left"
            android:layout_height="@dimen/dp_15" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="指令下发"
            android:textColor="#313131"
            android:textSize="@dimen/sp_17" />
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorwhite"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/iv_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="#ffffff"
        android:paddingBottom="@dimen/dp_20"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:text="指令输入"
            android:textSize="@dimen/sp_14"
            android:drawableLeft="@mipmap/qj_leibie_icon_qgl"
            android:textColor="#313131"
            android:drawablePadding="@dimen/dp_5"
            android:layout_margin="@dimen/dp_15"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/et_content"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_15"
            android:background="@drawable/edit_background"
            android:layout_width="match_parent"
            android:maxLength="100"
            android:gravity="top"
            android:maxLines="3"
            android:hint="请输入指令内容(100字以内)"
            android:textSize="12sp"
            android:padding="@dimen/dp_10"
            android:layout_height="@dimen/dp_60" />
        <TextView
            android:layout_marginBottom="@dimen/dp_4"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_width="match_parent"
            android:text=""
            android:background="#CCCCD5"
            android:layout_height="@dimen/dp_0_5" />
        <RelativeLayout
            android:id="@+id/rl_sel_people"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:text="接收人"
                android:textSize="@dimen/sp_14"
                android:drawableLeft="@mipmap/qj_chaosongren_icon_qgl"
                android:textColor="#313131"
                android:drawablePadding="@dimen/dp_5"
                android:layout_margin="@dimen/dp_15"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_sel_peo"
                android:layout_width="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_height="@dimen/dp_45"
                android:layout_marginRight="@dimen/dp_40"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:tag=""
                android:textColor="#000000"
                android:textSize="@dimen/sp_14" />
            <ImageView
                android:layout_alignParentRight="true"
                android:layout_gravity="right"
                android:layout_centerVertical="true"
                android:layout_width="@dimen/dp_25"
                android:layout_marginRight="@dimen/dp_10"
                android:background="@mipmap/qj_zuzhi_jigou_icon_qgl"
                android:layout_height="@dimen/dp_25" />
        </RelativeLayout>
        <TextView
            android:layout_marginBottom="@dimen/dp_4"
            android:layout_width="match_parent"
            android:text=""
            android:background="#CCCCD5"
            android:layout_height="@dimen/dp_0_5" />
        <Button
            android:layout_marginTop="@dimen/dp_10"
            android:id="@+id/bt_post"
            android:layout_width="match_parent"
            android:background="@drawable/edit_background_login_bt"
            android:textColor="#ffffff"
            android:text="发布指令"
            android:textSize="@dimen/sp_18"
            android:layout_marginRight="@dimen/dp_70"
            android:layout_marginLeft="@dimen/dp_70"
            android:layout_height="@dimen/dp_47" />
    </LinearLayout>
</LinearLayout>
