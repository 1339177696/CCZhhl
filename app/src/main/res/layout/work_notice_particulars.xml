<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:layout_height="@dimen/dp_45">

        <ImageView
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_width="@dimen/dp_15"
            android:id="@+id/iv_back"
            android:layout_centerVertical="true"
            android:background="@mipmap/ic_left"
            android:layout_height="@dimen/dp_15" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="通告"
            android:textColor="#313131"
            android:textSize="@dimen/sp_17" />
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_14"
        android:layout_marginBottom="@dimen/dp_15"
        android:background="@drawable/edit_background3"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/dp_10"
            android:layout_height="wrap_content">
            <TextView
                android:text="33333"
                android:layout_width="match_parent"
                android:maxLines="2"
                android:id="@+id/tv_author"
                android:textColor="#676767"
                android:gravity="center"
                android:layout_marginTop="@dimen/dp_10"
                android:textSize="@dimen/sp_11"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginTop="@dimen/dp_20"
                android:layout_width="match_parent"
                android:maxLines="2"
                android:text="1111"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:id="@+id/tv_title"
                android:textColor="#313131"
                android:textSize="@dimen/sp_15"
                android:layout_height="wrap_content" />
            <TextView
                android:text="2222222"
                android:layout_marginTop="@dimen/dp_33"
                android:layout_width="match_parent"
                android:id="@+id/tv_content"
                android:textColor="#313131"
                android:textSize="@dimen/sp_13"
                android:layout_height="match_parent" />

        </LinearLayout>

        <ImageView
            android:id="@+id/bt_store"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_gravity="right"
            android:layout_margin="@dimen/dp_20"
            android:background="@mipmap/ic_store" />
    </FrameLayout>
    </ScrollView>
</LinearLayout>
<TextView
android:id="@+id/tv_mengban"
android:visibility="gone"
android:layout_width="match_parent"
android:background="#99ffffff"
android:layout_height="match_parent" />
<fragment
android:layout_marginRight="@dimen/dp_20"
android:layout_gravity="right|bottom"
android:id="@+id/fg_order"
android:layout_marginBottom="@dimen/dp_40"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:name="com.hulian.oa.work.activity.instruct.fragment.Fra_post_order"
    />
    </FrameLayout>
</LinearLayout>