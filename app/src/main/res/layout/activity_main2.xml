<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/menu_drawer">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

        </FrameLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0_5"
                android:background="#dddddd" />

            <RadioGroup
                android:id="@+id/rg_footer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:gravity="center"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rb_message"
                    style="@style/footer_radioButton_style"
                    android:drawableTop="@drawable/main_low_tab3"
                    android:text="消息" />

                <RadioButton
                    android:id="@+id/rb_address"
                    style="@style/footer_radioButton_style"
                    android:drawableTop="@drawable/main_low_tab4"
                    android:text="通讯录" />



                <RadioButton
                    android:id="@+id/rb_work"
                    style="@style/footer_radioButton_style"
                    android:drawableTop="@drawable/main_low_tab6"
                    android:text="日程" />
<!--大苏打实打实打算-->
                <RadioButton
                    android:id="@+id/rb_agency"
                    style="@style/footer_radioButton_style"
                    android:drawableTop="@drawable/main_low_tab5"
                    android:text="待办" />

                <RadioButton
                    android:id="@+id/rb_bus"
                    style="@style/footer_radioButton_style"
                    android:drawableTop="@drawable/main_low_tab1"
                    android:text="驾驶舱" />

                <RadioButton
                    android:id="@+id/rb_news"
                    style="@style/footer_radioButton_style"
                    android:drawableTop="@drawable/main_low_tab2"
                    android:text="资讯" />
            </RadioGroup>
        </LinearLayout>


    </LinearLayout>
    <!--抽屉式页面-->
    <RelativeLayout
        android:clickable="true"
        android:layout_width="@dimen/dp_230"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_marginTop="@dimen/dp_10"
            android:id="@+id/main2_rela1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_100">

            <ImageView
                android:id="@+id/main2_img"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_17"
                android:src="@mipmap/user_img_qgl" />

            <TextView
                android:id="@+id/main2_tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_27"
                android:layout_toRightOf="@+id/main2_img"
                android:text="王俊杰"
                android:textColor="#ff313131"
                android:textSize="@dimen/sp_11" />

            <TextView
                android:id="@+id/main2_tv_dept"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/main2_tv_name"
                android:layout_marginLeft="@dimen/dp_7"
                android:layout_marginTop="@dimen/dp_2"
                android:layout_toEndOf="@+id/main2_tv_name"
                android:text="信息科局长"
                android:textColor="#ff313131"
                android:textSize="@dimen/sp_10" />

            <TextView
                android:id="@+id/main2_tv_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/main2_tv_name"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_6"
                android:layout_toRightOf="@+id/main2_img"
                android:text="13756036991"
                android:textColor="#ff313131"
                android:textSize="@dimen/sp_10" />

            <ImageView
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/main2_tv_name"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/dp_6"
                android:layout_marginRight="17dp"
                android:src="@mipmap/main2_edit" />
        </RelativeLayout>

        <View
            android:id="@+id/main2_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_below="@+id/main2_rela1"
            android:background="#E1E1E1" />

        <RelativeLayout
            android:id="@+id/main2_rela_program"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/main2_view"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_15">

            <ImageView
                android:layout_centerVertical="true"
                android:id="@+id/main2_img1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/main2_calendar" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_toRightOf="@+id/main2_img1"
                android:text="我的日程"
                android:textColor="#ff313131"
                android:textSize="@dimen/sp_10" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_19"
                android:src="@mipmap/qj_selected_icon_qgl" />

        </RelativeLayout>

        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/main2_rela_collection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/main2_rela_program"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_21">

            <ImageView
                android:layout_centerVertical="true"
                android:id="@+id/main2_img2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/main2_collection" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_toRightOf="@+id/main2_img2"
                android:text="我的收藏"
                android:textColor="#ff313131"
                android:textSize="@dimen/sp_10" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_19"
                android:src="@mipmap/qj_selected_icon_qgl" />

        </RelativeLayout>

        <Button
            android:id="@+id/main2_outlogin"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_30"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/dp_45"
            android:layout_marginRight="@dimen/dp_45"
            android:layout_marginBottom="@dimen/dp_80"
            android:background="@drawable/main2_btn_bg"
            android:text="退出登录"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_11" />

        <!--是的撒大苏打大-->

    </RelativeLayout>

</android.support.v4.widget.DrawerLayout>