<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorwhite"
    >
    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:background="#2D4BCA"
        android:gravity="center_vertical"
        android:layout_height="@dimen/dp_45">
        <ImageView
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_width="@dimen/dp_12"
            android:id="@+id/iv_back"
            android:layout_centerVertical="true"
            android:background="@mipmap/ic_left_white"
            android:layout_height="@dimen/dp_12" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="指令反馈"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_11" />
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/details_img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:layout_marginLeft="@dimen/dp_22"
                android:id="@+id/tv_content1"
                android:layout_marginTop="@dimen/dp_10"
                android:drawableLeft="@mipmap/qj_leibie_icon_qgl"
                android:textSize="@dimen/dp_11"
                android:textColor="#313131"
                android:drawablePadding="@dimen/dp_2"
                android:text="指令内容"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <TextView
                android:layout_below="@id/tv_content1"
                android:layout_marginLeft="@dimen/dp_32"
                android:id="@+id/create_coontent"
                android:layout_marginTop="@dimen/dp_15"
                android:textSize="@dimen/sp_9"
                android:textColor="#313131"
                android:drawablePadding="@dimen/dp_5"
                android:text="1111111"
                android:maxLines="2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <TextView
                android:layout_alignParentRight="true"
                android:layout_marginLeft="@dimen/dp_10"
                android:id="@+id/create_time"
                android:layout_marginTop="@dimen/dp_10"
                android:textSize="12sp"
                android:textColor="#A8A8A8"
                android:text="日期：2019-07-14"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

        </RelativeLayout>

        <EditText
            android:id="@+id/et_content"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_60"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_15"
            android:background="@drawable/edit_background"
            android:gravity="top"
            android:maxLength="100"
            android:maxLines="3"
            android:hint="请输入反馈内容(100字以内)"
            android:padding="@dimen/dp_10"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_back_instruct"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_37"
            android:layout_marginLeft="@dimen/dp_70"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_70"
            android:layout_marginBottom="@dimen/dp_10"
            android:background="@drawable/edit_background_login_bt"
            android:gravity="center"
            android:text="反馈"
            android:textColor="#ffffff"
            android:textSize="@dimen/sp_11" />
    </LinearLayout>
</LinearLayout>