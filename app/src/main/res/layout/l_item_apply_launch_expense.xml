<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginLeft="@dimen/dp_10"
    android:layout_marginRight="@dimen/dp_10"
    android:layout_marginTop="@dimen/dp_10"
    android:background="@drawable/liner_border_gb_qgl"
    android:layout_height="@dimen/dp_105">
    <ImageView
        android:id="@+id/iv_remind"
        android:layout_width="@dimen/dp_9"
        android:layout_height="@dimen/dp_9"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_27"
        android:background="@drawable/liner_yuan_qgl1" />
    <LinearLayout
        android:layout_marginLeft="@dimen/dp_18"
        android:layout_marginTop="@dimen/dp_25"
        android:layout_toRightOf="@id/iv_remind"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            >
            <TextView
                android:id="@+id/tv_title"
                android:textSize="@dimen/dp_14"
                android:text="报销申请标题"
                android:textColor="@color/black"
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_time"
                android:text="2019-17-01"
                android:layout_marginRight="@dimen/dp_10"
                android:textColor="@color/black"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_40"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            >
            <TextView
                android:textColor="#ff676767"
                android:id="@+id/tv_expense_monkey_title"
                android:text="报销金额"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textColor="#2B8CFA"
                android:id="@+id/tv_expense_monkey"
                android:layout_toRightOf="@id/tv_expense_monkey_title"
                android:layout_marginLeft="@dimen/dp_5"
                android:text="1900"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/tv_pend"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>