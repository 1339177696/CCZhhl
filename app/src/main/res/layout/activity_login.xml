<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    >

    <ImageView
        android:layout_width="match_parent"
        android:background="@mipmap/login_banner_pt"
        android:layout_height="@dimen/dp_209" />
    <LinearLayout
        android:paddingBottom="@dimen/dp_100"
        android:layout_marginTop="@dimen/dp_10"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/dp_7"
        android:layout_marginRight="@dimen/dp_7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_marginTop="@dimen/dp_41"
    android:paddingLeft="@dimen/dp_16"
    android:paddingRight="@dimen/dp_16"
    android:layout_marginLeft="@dimen/dp_35"
    android:layout_marginRight="@dimen/dp_35"
    android:gravity="center_vertical"
    android:background="@drawable/edit_background_login"
    android:layout_height="@dimen/dp_41">
    <ImageView
        android:id="@+id/tv_title1"
        android:layout_width="25dp"
        android:textColor="#313131"
        android:layout_centerVertical="true"
        android:background="@mipmap/user_name_icon"
        android:layout_height="25dp" />
<EditText
   android:layout_toRightOf="@id/tv_title1"
    android:layout_width="match_parent"
    android:textSize="@dimen/sp_14"
    android:hint="请输入账号"
    android:layout_marginLeft="@dimen/dp_5"
    android:gravity="center_vertical"
    android:singleLine="true"
    android:background="@null"
    android:focusable="true"
    android:id="@+id/et_userName"
    android:layout_height="match_parent" />
</RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_gravity="center_vertical"
        android:paddingLeft="@dimen/dp_16"
        android:paddingRight="@dimen/dp_16"
        android:background="@drawable/edit_background_login"
        android:layout_marginLeft="@dimen/dp_35"
        android:layout_marginRight="@dimen/dp_35"
        android:layout_height="@dimen/dp_41"
>
        <ImageView
            android:id="@+id/tv_title2"
            android:layout_width="25dp"
            android:layout_centerVertical="true"
            android:background="@mipmap/password_icon"
            android:layout_height="25dp" />
        <EditText
            android:hint="请输入密码"
            android:layout_toRightOf="@id/tv_title2"
            android:layout_width="match_parent"
            android:textSize="@dimen/sp_14"
            android:id="@+id/et_pass"
            android:singleLine="true"
            android:inputType="textPassword"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_5"
            android:background="@null"
            android:textCursorDrawable="@drawable/color_cursor"
            android:layout_height="match_parent" />
        <TextView
            android:layout_marginLeft="-15dp"
            android:layout_below="@id/et_pass"
            android:layout_toRightOf="@id/tv_title2"
            android:layout_width="match_parent"
            android:background="@color/color_xian"
            android:layout_height="@dimen/dp_0_5" />
    </RelativeLayout>
    <Button
        android:layout_gravity="center_horizontal"
        android:id="@+id/bt_login"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginLeft="@dimen/dp_35"
        android:layout_marginRight="@dimen/dp_35"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_41"
        android:background="@drawable/edit_background_login_bt"
        android:textColor="#ffffff"
        android:text="登录"
        android:textSize="@dimen/sp_15"
    />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_height="wrap_content">
        <TextView
            android:gravity="center_horizontal"
            android:background="#EBEBEB"
            android:layout_width="@dimen/dp_25"
            android:layout_height="1dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_marginLeft="@dimen/dp_5"
        android:text="手机登录"
        android:textColor="#A8A8A8"
        android:gravity="center_horizontal"
        android:textSize="@dimen/sp_12"
        android:layout_height="wrap_content" />
        <TextView
            android:layout_marginLeft="@dimen/dp_5"
            android:gravity="center_horizontal"
            android:background="#EBEBEB"
            android:layout_width="@dimen/dp_25"
            android:layout_height="1dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
    <TextView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:text="手机登录"
        android:textColor="#A8A8A8"
        android:gravity="center_horizontal|right"
        android:layout_marginRight="@dimen/dp_10"
        android:textSize="@dimen/sp_12"
        android:layout_height="wrap_content" />
        <TextView
            android:layout_width="1dp"
            android:text="|"
            android:textColor="#A8A8A8"
            android:gravity="center_horizontal"
            android:textSize="@dimen/sp_12"
            android:layout_height="match_parent" />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="人脸登录"
            android:textColor="#A8A8A8"
            android:layout_marginLeft="@dimen/dp_10"
            android:gravity="center_horizontal|left"
            android:textSize="@dimen/sp_12"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>
