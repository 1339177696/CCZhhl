<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="#ffffff"
    android:layout_marginLeft="@dimen/dp_15"
    android:layout_marginRight="@dimen/dp_15"
    android:layout_marginBottom="@dimen/dp_10"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <LinearLayout
        android:paddingLeft="10dp"
        android:paddingTop="@dimen/dp_15"
        android:paddingRight="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_15"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <LinearLayout
            android:background="@drawable/edit_notice_bt"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/dp_4"
            android:layout_marginRight="@dimen/dp_14"
            android:gravity="center"
            android:layout_width="@dimen/dp_66"
            android:layout_height="@dimen/dp_66"
            >
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/tv_time"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="2019/09"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_12" />
            <TextView
                android:layout_marginTop="-8dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/tv_time2"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="12"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_21" />
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:layout_marginTop="5dp"
                android:gravity="bottom"
                android:id="@+id/tv_posert"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:textColor="#676767"
                android:ellipsize="end"
                android:textSize="@dimen/sp_14"
                android:text="王俊杰"
                />
            <ImageView
                android:layout_marginTop="5dp"
                android:id="@+id/iv_image"
                android:layout_marginLeft="@dimen/dp_5"
                android:background="@mipmap/jiaohu_icon"
                android:layout_toRightOf="@id/tv_posert"
                android:layout_width="wrap_content"
                android:layout_marginRight="@dimen/dp_5"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginTop="5dp"
                android:gravity="bottom"
                android:id="@+id/tv_receiver"
                android:layout_toRightOf="@id/iv_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:textColor="#085DD6"
                android:ellipsize="end"
                android:textSize="@dimen/sp_14"
                android:text="黄龙"
                />

            <TextView
                android:layout_marginBottom="5dp"
                android:layout_alignParentBottom="true"
                android:id="@+id/tv_name"
                android:layout_toLeftOf="@+id/iv_head"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_15"
                android:maxLines="2"
                android:textColor="#313131"
                android:ellipsize="end"
                android:textSize="@dimen/sp_14"
                android:text=""
                />
        </RelativeLayout>
    </LinearLayout>
    <ImageView
        android:id="@+id/tv_operate"
        android:layout_gravity="right"
        android:layout_width="@dimen/dp_47"
        android:layout_height="@dimen/dp_47" />
</FrameLayout>