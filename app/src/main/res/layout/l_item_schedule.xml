<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_45">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <TextView
            android:layout_marginTop="-4dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/dp_20"
            android:id="@+id/tv_time"
            android:textColor="#BFBFC1"
            android:textSize="@dimen/sp_12"
            android:text="01:00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <TextView
            android:layout_centerVertical="true"
            android:layout_below="@id/tv_time"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/dp_16"
            android:id="@+id/tv_now"
            android:textColor="#FF0000"
            android:textSize="@dimen/sp_12"
            android:text="01:00 â€¢ "
            android:gravity="top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <FrameLayout
            android:layout_marginTop="@dimen/dp_2"
            android:id="@+id/fl_content"
            android:layout_marginLeft="@dimen/dp_2"
            android:layout_width="match_parent"
            android:layout_toRightOf="@id/tv_time"
            android:layout_height="match_parent">
            <View
                android:layout_marginRight="@dimen/dp_5"
                android:singleLine="true"
                android:ellipsize="end"
                android:background="@color/bg_color"
                android:layout_centerVertical="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <TextView
                android:layout_width="match_parent"
                android:text=""
                android:id="@+id/tv_title"
                android:textColor="#313131"
                android:layout_marginLeft="@dimen/dp_15"
                android:gravity="center_vertical"
                android:textSize="@dimen/sp_14"
                android:layout_height="match_parent" />
            <View
                android:id="@+id/view"
                android:background="@color/bg_color2"
                android:layout_centerVertical="true"
                android:layout_width="@dimen/dp_3"
                android:layout_height="match_parent" />
        </FrameLayout>
        <TextView
            android:layout_marginLeft="@dimen/dp_50"
            android:layout_centerVertical="true"
            android:id="@+id/tv_now_dian"
            android:layout_width="@dimen/dp_2"
            android:layout_height="@dimen/dp_2"
            android:background="#FF0000"
            android:layout_gravity="center_vertical"></TextView>
        <TextView
            android:layout_marginLeft="@dimen/dp_50"
            android:layout_centerVertical="true"
            android:id="@+id/tv_now_xian"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="#FF0000"
            android:layout_gravity="center_vertical"></TextView>

        <TextView
            android:layout_marginTop="@dimen/dp_2"
            android:layout_marginLeft="@dimen/dp_53"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#BFBFC1"
            android:layout_gravity="center_vertical"
            />

    </RelativeLayout>
</LinearLayout>