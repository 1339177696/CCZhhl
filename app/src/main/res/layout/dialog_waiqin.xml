<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_frame_solid_1">

    <ImageView
        android:layout_margin="@dimen/dp_10"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/im_diss"
        android:layout_width="@dimen/dp_15"
        android:src="@mipmap/wq_shut"
        android:layout_height="@dimen/dp_15"/>

    <TextView
        android:id="@+id/tv_text1"
        app:layout_constraintTop_toBottomOf="@id/im_diss"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="外勤打卡"
        android:textColor="#ff333333"
        android:textSize="@dimen/sp_20"/>

    <TextView
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_20"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_text1"
            android:id="@+id/tv_text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="地址："
            android:textColor="#333333"
            android:textSize="@dimen/sp_16"
            />
    <ImageView
        android:id="@+id/im_m1"
            android:layout_marginTop="@dimen/dp_10"
            app:layout_constraintTop_toBottomOf="@id/tv_text2"
            app:layout_constraintLeft_toLeftOf="@id/tv_text2"
            android:src="@mipmap/dkrl_rule_addre"
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_18"
        />

            <TextView
                android:layout_marginRight="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_10"
                app:layout_constraintTop_toBottomOf="@id/tv_text2"
                app:layout_constraintLeft_toRightOf="@+id/im_m1"
                app:layout_constraintRight_toRightOf="parent"
                android:id="@+id/tv_adress_wq"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#DDDADD"
                android:textSize="@dimen/sp_12"
                />

        <TextView
            app:layout_constraintTop_toBottomOf="@id/tv_adress_wq"
            app:layout_constraintLeft_toLeftOf="@id/tv_text2"
            android:layout_marginTop="@dimen/dp_15"
            android:id="@+id/tv_text4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="备注："
            android:textColor="#333333"
            android:textSize="@dimen/sp_16"
            />

        <EditText
            android:layout_margin="@dimen/dp_10"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_text4"
            android:id="@+id/et_content"
            android:background="@drawable/edit_background"
            android:layout_width="match_parent"
            android:maxLength="200"
            android:gravity="top"
            android:maxLines="5"
            android:hint="备注"
            android:textSize="@dimen/sp_14"
            android:padding="@dimen/dp_10"
            android:layout_height="@dimen/dp_90" />

        <TextView
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_15"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/et_content"
            android:id="@+id/tv_text5"
            android:textColor="@color/white"
            android:background="@drawable/dk_waiqin_tv_bg"
            android:gravity="center"
            android:text="打卡"
            android:layout_width="100dp"
            android:layout_height="35dp"/>

</android.support.constraint.ConstraintLayout>