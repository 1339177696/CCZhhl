<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_110"
    android:layout_marginLeft="@dimen/dp_10"
    android:layout_marginTop="@dimen/dp_10"
    android:layout_marginRight="@dimen/dp_10"
    android:background="@drawable/liner_border_gb_qgl">

    <ImageView
        android:id="@+id/iv_remind"
        android:layout_width="@dimen/dp_9"
        android:layout_height="@dimen/dp_9"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_22"
        android:background="@drawable/liner_yuan_qgl1" />
    <LinearLayout
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_20"
        android:id="@+id/ll_content"
        android:layout_toRightOf="@id/iv_remind"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_title"
                android:textSize="@dimen/sp_14"
                android:text="公文流转标题"
                android:textColor="@color/black"
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginRight="20dp"
                android:id="@+id/tv_time"
                android:text="2019-17-01"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <TextView
            android:id="@+id/qgl_zy_ysp_jieshi"
            android:text="接口没返回关于审批驳回问题详细解释"
            android:textSize="@dimen/sp_13"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <TextView
        android:textColor="@color/white"
        android:background="@drawable/qgl_qp_btn_bg1"
        android:id="@+id/ld_stuas"
        android:gravity="center"
        android:text="签批"
        android:layout_marginBottom="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:textSize="@dimen/sp_11"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_18" />

    <ImageView
        android:id="@+id/tv_status"
        android:src="@mipmap/qj_shenpi_tongguo_icon_qgl"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>