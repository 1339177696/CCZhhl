<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/background_corners_1"
    android:padding="20dp"
    android:layout_margin="10dp"
    >


    <EditText
        android:id="@+id/name_edit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="150dp"
        android:layout_marginLeft="100dp"
        tools:text="长春市宏日新能源有限责任公司"
        android:textColor="@color/title_text"
        android:textSize="16sp"
        android:background="@drawable/background_arc_3"
        android:padding="7dp"
        android:visibility="invisible"
        />

    <TextView
        android:id="@+id/name_text"
        android:layout_width="0dp"
        android:layout_height="0dp"
        tools:text="长春市宏日新能源有限责任公司"
        android:textColor="@color/title_text"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="@+id/name_edit"
        app:layout_constraintRight_toRightOf="@+id/name_edit"
        app:layout_constraintTop_toTopOf="@+id/name_edit"
        app:layout_constraintBottom_toBottomOf="@+id/name_edit"
        android:gravity="center_vertical"
        android:layout_marginLeft="7dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="认证项目:"
        android:textSize="16sp"
        android:textColor="@color/text_color_1"
        app:layout_constraintRight_toLeftOf="@+id/name_edit"
        app:layout_constraintTop_toTopOf="@+id/name_edit"
        app:layout_constraintBottom_toBottomOf="@+id/name_edit"
        android:layout_marginRight="10dp"
        />


    <EditText
        android:id="@+id/organization_edit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="@+id/name_edit"
        app:layout_constraintLeft_toLeftOf="@+id/name_edit"
        app:layout_constraintTop_toBottomOf="@+id/name_edit"
        android:layout_marginTop="10dp"
        tools:text="其他认证机构"
        android:textColor="@color/title_text"
        android:textSize="16sp"
        android:background="@drawable/background_arc_3"
        android:padding="7dp"
        android:visibility="invisible"
        />

    <TextView
        android:id="@+id/organization_text"
        android:layout_width="0dp"
        android:layout_height="0dp"
        tools:text="其他认证机构"
        android:textColor="@color/title_text"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="@+id/organization_edit"
        app:layout_constraintRight_toRightOf="@+id/organization_edit"
        app:layout_constraintTop_toTopOf="@+id/organization_edit"
        app:layout_constraintBottom_toBottomOf="@+id/organization_edit"
        android:gravity="center_vertical"
        android:layout_marginLeft="7dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="认证机构:"
        android:textSize="16sp"
        android:textColor="@color/text_color_1"
        app:layout_constraintRight_toLeftOf="@+id/organization_edit"
        app:layout_constraintTop_toTopOf="@+id/organization_edit"
        app:layout_constraintBottom_toBottomOf="@+id/organization_edit"
        android:layout_marginRight="10dp"
        />

    <EditText
        android:id="@+id/data_edit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="@+id/organization_edit"
        app:layout_constraintLeft_toLeftOf="@+id/organization_edit"
        app:layout_constraintTop_toBottomOf="@+id/organization_edit"
        android:layout_marginTop="10dp"
        tools:text="2019-12-5"
        android:textColor="@color/title_text"
        android:textSize="16sp"
        android:background="@drawable/background_arc_3"
        android:padding="7dp"
        android:visibility="invisible"
        />

    <TextView
        android:id="@+id/data_text"
        android:layout_width="0dp"
        android:layout_height="0dp"
        tools:text="其他认证机构"
        android:textColor="@color/title_text"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="@+id/data_edit"
        app:layout_constraintRight_toRightOf="@+id/data_edit"
        app:layout_constraintTop_toTopOf="@+id/data_edit"
        app:layout_constraintBottom_toBottomOf="@+id/data_edit"
        android:gravity="center_vertical"
        android:layout_marginLeft="7dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="认证日期:"
        android:textSize="16sp"
        android:textColor="@color/text_color_1"
        app:layout_constraintRight_toLeftOf="@+id/data_edit"
        app:layout_constraintTop_toTopOf="@+id/data_edit"
        app:layout_constraintBottom_toBottomOf="@+id/data_edit"
        android:layout_marginRight="10dp"
        />

    <EditText
        android:id="@+id/validity_edit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="@+id/data_edit"
        app:layout_constraintLeft_toLeftOf="@+id/data_edit"
        app:layout_constraintTop_toBottomOf="@+id/data_edit"
        android:layout_marginTop="10dp"
        tools:text="1年"
        android:textColor="@color/title_text"
        android:textSize="16sp"
        android:background="@drawable/background_arc_3"
        android:padding="7dp"
        android:visibility="invisible"
        />

    <TextView
        android:id="@+id/validity_text"
        android:layout_width="0dp"
        android:layout_height="0dp"
        tools:text="1年"
        android:textColor="@color/title_text"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="@+id/validity_edit"
        app:layout_constraintRight_toRightOf="@+id/validity_edit"
        app:layout_constraintTop_toTopOf="@+id/validity_edit"
        app:layout_constraintBottom_toBottomOf="@+id/validity_edit"
        android:gravity="center_vertical"
        android:layout_marginLeft="7dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="认证有效期:"
        android:textSize="16sp"
        android:textColor="@color/text_color_1"
        app:layout_constraintRight_toLeftOf="@+id/validity_edit"
        app:layout_constraintTop_toTopOf="@+id/validity_edit"
        app:layout_constraintBottom_toBottomOf="@+id/validity_edit"
        android:layout_marginRight="10dp"
        />

</android.support.constraint.ConstraintLayout>