<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_105"
    android:layout_marginLeft="@dimen/dp_10"
    android:layout_marginTop="@dimen/dp_10"
    android:layout_marginRight="@dimen/dp_10"
    android:background="@drawable/liner_border_gb_qgl">
    <!--<ImageView-->
        <!--android:id="@+id/iv_remind"-->
        <!--android:layout_width="@dimen/dp_2"-->
        <!--android:layout_height="match_parent"-->
        <!--android:background="@drawable/l_collection_notice_bg"-->
        <!--/>-->
    <!--职工端数据-->
    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/Workers_data"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/iv_remind1"
            android:layout_width="@dimen/dp_9"
            android:layout_height="@dimen/dp_9"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_22"
            android:background="@drawable/liner_yuan_qgl1" />
        <LinearLayout
            android:layout_marginLeft="@dimen/dp_18"
            android:layout_marginTop="@dimen/dp_20"
            android:id="@+id/ll_content"
            android:layout_toRightOf="@id/iv_remind1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_title"
                    android:textSize="@dimen/dp_14"
                    android:text="公文流转标题"
                    android:layout_alignParentLeft="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginRight="@dimen/dp_20"
                    android:id="@+id/tv_time"
                    android:text="2019-17-01"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <LinearLayout
                android:id="@+id/line_lz"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/a"
                    android:text="发起人"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:id="@+id/faqi_person"
                    android:text="留专人"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/line_sp"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_roam_person_title"
                    android:text="审批人"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:id="@+id/tv_roam_person"
                    android:text="留专人、留专人、留专人、留专人、"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>




        </LinearLayout>
    </RelativeLayout>
    <!--领导端数据-->
    <RelativeLayout
        android:visibility="visible"
        android:id="@+id/Leader_data"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_remind2"
            android:layout_width="@dimen/dp_9"
            android:layout_height="@dimen/dp_9"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_22"
            android:background="@drawable/liner_yuan_qgl1" />

        <LinearLayout
            android:layout_marginLeft="@dimen/dp_18"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_toRightOf="@id/iv_remind2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/Leader_tv_wenhao"
                    android:textSize="@dimen/dp_14"
                    android:text="公文文号"
                    android:layout_alignParentLeft="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginRight="@dimen/dp_20"
                    android:id="@+id/Leader_tv_time"
                    android:text="2019-17-01"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/Leader_tv_title"
                    android:text="公文标题"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:textColor="@color/white"
            android:background="@drawable/qgl_qp_btn_bg1"
            android:id="@+id/ld_stuas"
            android:gravity="center"
            android:text="签批"
            android:layout_marginBottom="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/sp_11"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_18" />
    </RelativeLayout>





    <!--qgl注释-->
