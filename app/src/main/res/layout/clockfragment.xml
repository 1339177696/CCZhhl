<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:id="@+id/iv_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_19"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_15">

            <ImageView
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:background="@mipmap/bg_agency_head" />

            <TextView
                android:id="@+id/tv_type"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="报"
                android:textColor="#0054CC"
                android:textSize="@dimen/sp_16" />
        </FrameLayout>

        <TextView
            android:id="@+id/clock_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/iv_image"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_toRightOf="@+id/iv_image"
            android:text="王俊杰"
            android:textColor="#ff101010"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/clock_department"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/clock_name"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_toRightOf="@+id/iv_image"
            android:text="设计部  考勤(查看规则)"
            android:textColor="#ff37447a"
            android:textSize="9sp" />

        <TextView
            android:id="@+id/current_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/iv_image"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_30"
            android:text="2020-02-13 星期四"
            android:textColor="#ff37447a"
            android:textSize="9sp" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_5"
        android:layout_marginLeft="@dimen/dp_14"
        android:layout_marginRight="@dimen/dp_14"
        android:background="#E3E3E3" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_14">

        <RelativeLayout
            android:id="@+id/rela_on"
            android:layout_width="@dimen/dp_18"
            android:layout_height="@dimen/dp_18"
            android:layout_marginLeft="@dimen/dp_16"
            android:background="@drawable/cloch_tv_bg">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="上"
                android:textColor="#ffffffff"
                android:textSize="9sp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/work_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_toRightOf="@+id/rela_on"
            android:text="上班时间 08:30"
            android:textColor="#ff333333"
            android:textSize="9sp" />

        <TextView
            android:id="@+id/clock_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_toRightOf="@+id/work_time"
            android:text="打卡时间 08:30"
            android:textColor="#ff333333"
            android:textSize="9sp" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_150">

        <RelativeLayout
            android:layout_width="@dimen/dp_91"
            android:layout_height="@dimen/dp_91"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/clock_rela_bg_yes">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="上班打卡"
                    android:textColor="#ffffffff"
                    android:textSize="13sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="08:21:06"
                    android:textColor="#ffffffff"
                    android:textSize="11sp" />
            </LinearLayout>


        </RelativeLayout>
        <!--上班按钮-->
        <View
            android:layout_width="@dimen/dp_0_5"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_25"
            android:background="#E3E3E3" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/rela_under"
            android:layout_width="@dimen/dp_18"
            android:layout_height="@dimen/dp_18"
            android:layout_marginLeft="@dimen/dp_16"
            android:background="@drawable/cloch_tv_bg">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="下"
                android:textColor="#ffffffff"
                android:textSize="9sp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/under_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_toRightOf="@+id/rela_under"
            android:text="下班时间 08:30"
            android:textColor="#ff333333"
            android:textSize="9sp" />

        <TextView
            android:id="@+id/under_clock_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_toRightOf="@+id/under_time"
            android:text="打卡时间 08:30"
            android:textColor="#ff333333"
            android:textSize="9sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_150">
        <!--下班按钮-->
        <RelativeLayout
            android:layout_width="@dimen/dp_91"
            android:layout_height="@dimen/dp_91"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/clock_rela_bg_no">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="下班打卡"
                    android:textColor="#ffffffff"
                    android:textSize="13sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="17：50"
                    android:textColor="#ffffffff"
                    android:textSize="11sp" />
            </LinearLayout>


        </RelativeLayout>
    </RelativeLayout>




</LinearLayout>