<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#11ffffff">
    <!--android:background="@drawable/free_dialog_bg"-->
    <RelativeLayout
        android:layout_width="@dimen/dp_260"
        android:layout_height="@dimen/dp_240"
        android:layout_centerInParent="true"
        android:background="@drawable/dialog_remind"
        android:orientation="vertical">
            <TextView
                android:id="@+id/tv_title"
                android:text="驳回原因"
                android:textSize="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="@dimen/dp_30"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <EditText
                android:layout_below="@id/tv_title"
                android:layout_width="@dimen/dp_212"
                android:layout_height="@dimen/dp_90"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="@dimen/dp_30"
                android:hint="请输入驳回原因"
                android:textSize="@dimen/dp_14"
                android:gravity="start"
                android:padding="@dimen/dp_5"
                android:background="@drawable/baoxiao_disagree_reason_bg"
                />
            <Button
                android:id="@+id/bt_know"
                android:layout_gravity="center_horizontal"
                android:layout_width="@dimen/dp_80"
                android:layout_height="@dimen/dp_28"
                android:background="@drawable/baoxiao_disagree_bg"
                android:gravity="center"
                android:text="确定"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/dp_40"
                android:textColor="@color/bg_red_a"
                android:textSize="16dp" />

    </RelativeLayout>

</RelativeLayout>