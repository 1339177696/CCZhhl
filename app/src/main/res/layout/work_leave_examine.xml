<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EBEBEB">


    <LinearLayout
        android:orientation="vertical"
        android:background="@mipmap/banner_bg_qgl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_170">

        <RelativeLayout
            android:layout_marginTop="@dimen/dp_25"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:id="@+id/iv_back"
            android:layout_height="@dimen/dp_53">
            <ImageView
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_width="@dimen/dp_15"
                android:layout_centerVertical="true"
                android:background="@mipmap/ic_left_white"
                android:layout_height="@dimen/dp_15" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="请假审批"
                android:textColor="#ffffff"
                android:textSize="@dimen/sp_17" />

        </RelativeLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/dp_15"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <!--开始时间-->
            <LinearLayout
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2019/8/8"
                    android:textColor="#ffffffff"
                    android:textSize="@dimen/sp_17"
                    />

                <TextView
                    android:layout_marginTop="@dimen/dp_14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="开始时间"
                    android:textColor="#ffffffff"
                    android:textSize="12sp"
                    />


            </LinearLayout>
            <!--请假时长-->
            <LinearLayout
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1天"
                    android:textColor="#ffffffff"
                    android:textSize="@dimen/sp_17"
                    />

                <TextView
                    android:layout_marginTop="@dimen/dp_14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="请假时长"
                    android:textColor="#ffffffff"
                    android:textSize="12sp"
                    />


            </LinearLayout>
            <!--结束时间-->
            <LinearLayout
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2019/8/8"
                    android:textColor="#ffffffff"
                    android:textSize="@dimen/sp_17"
                    />

                <TextView
                    android:layout_marginTop="@dimen/dp_14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="结束时间"
                    android:textColor="#ffffffff"
                    android:textSize="12sp"
                    />


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <ScrollView
        android:layout_marginTop="@dimen/dp_155"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_marginRight="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_15"
                android:background="@drawable/liner_border_gb_qgl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv_remind_my"
                    android:layout_width="@dimen/dp_9"
                    android:layout_height="@dimen/dp_9"
                    android:layout_marginLeft="@dimen/dp_13"
                    android:layout_marginTop="@dimen/dp_22"
                    android:background="@drawable/liner_yuan_qgl1" />


                <LinearLayout
                    android:id="@+id/liner_my_qgl1"
                    android:layout_toLeftOf="@+id/iv_result"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_22"
                    android:layout_toRightOf="@+id/iv_remind_my"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <!--请假事由-->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/tv_reason_title"
                            android:text="申请人"
                            android:textColor="#676767"
                            android:textSize="@dimen/dp_14"
                            android:layout_width="@dimen/dp_80"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/tv_leave_reason"
                            android:text="王俊杰"
                            android:textColor="@color/black"
                            android:textSize="@dimen/dp_14"
                            android:layout_toRightOf="@id/tv_reason_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </RelativeLayout>
                    <!--审批人-->
                    <RelativeLayout
                        android:layout_marginTop="@dimen/dp_20"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:text="请假事由"
                            android:textSize="@dimen/dp_14"
                            android:textColor="#676767"
                            android:id="@+id/tv_person_title"
                            android:layout_width="@dimen/dp_80"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:text="事假"
                            android:id="@+id/tv_approved_person"
                            android:layout_toRightOf="@id/tv_person_title"
                            android:textSize="@dimen/dp_14"
                            android:textColor="@color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </RelativeLayout>
                    <!--抄送人-->
                    <RelativeLayout
                        android:layout_marginTop="@dimen/dp_20"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:text="请假描述"
                            android:textSize="@dimen/dp_14"
                            android:textColor="#676767"
                            android:id="@+id/tv_person_title1"
                            android:layout_width="@dimen/dp_80"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:text="去湖南株洲探亲去顺便去旅游一下，再去北京看下朋友和探亲。"
                            android:id="@+id/tv_chaosong_person_qgl"
                            android:layout_toRightOf="@id/tv_person_title1"
                            android:textSize="@dimen/dp_14"
                            android:textColor="@color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </RelativeLayout>



                </LinearLayout>
                <RelativeLayout
                    android:layout_marginLeft="@dimen/dp_10"
                    android:id="@+id/work_rela_my1"
                    android:layout_marginTop="@dimen/dp_13"
                    android:layout_below="@id/liner_my_qgl1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/dp_80">
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycler2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="23dp"
                    android:overScrollMode="never" />
                </RelativeLayout>

                <RelativeLayout

                    android:layout_marginBottom="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_below="@+id/work_rela_my1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <TextView
                        android:layout_marginRight="@dimen/dp_7"
                        android:layout_toLeftOf="@+id/imge_rhit"
                        android:id="@+id/tv_check_history"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#ff2b8cfa"
                        android:textSize="12sp"
                        />

                    <ImageView
                        android:layout_marginRight="@dimen/dp_10"
                        android:layout_centerVertical="true"
                        android:id="@+id/imge_rhit"
                        android:layout_alignParentRight="true"
                        android:src="@mipmap/right_icon_qgl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>



            </RelativeLayout>
            <TextView
                android:textSize="@dimen/sp_14"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/sp_8"
                android:text="审批意见"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:textSize="@dimen/sp_9"
                android:paddingRight="@dimen/dp_8"
                android:paddingLeft="@dimen/dp_8"
                android:id="@+id/tv_bohui"
                android:layout_marginTop="@dimen/dp_5"
                android:background="@drawable/edit_background"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_80" />

        </LinearLayout>

    </ScrollView>

    <RadioGroup
        android:layout_marginRight="@dimen/dp_22"
        android:layout_marginLeft="@dimen/dp_22"
        android:layout_marginBottom="@dimen/dp_22"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RadioButton
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:background="@drawable/work_leave_cheked_bg_qgl"
            android:id="@+id/tv_disagree"
            android:button="@null"
            android:gravity="center"
            android:text="驳回"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_30" />

        <View
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_1"/>

        <RadioButton
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:background="@drawable/work_leave_cheked_bg_qgl"
            android:id="@+id/tv_agree"
            android:checked="true"
            android:button="@null"
            android:gravity="center"
            android:text="同意"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_30" />
    </RadioGroup>

