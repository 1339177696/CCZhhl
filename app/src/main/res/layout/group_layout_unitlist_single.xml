<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/dp_20"
    android:paddingLeft="@dimen/dp_20"
    android:paddingRight="@dimen/dp_20">


    <ImageView
        android:layout_marginTop="@dimen/dp_5"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/iv_remind"
        android:layout_width="@dimen/dp_9"
        android:layout_height="@dimen/dp_9"
        android:background="@drawable/liner_yuan_qgl1" />

    <TextView
        app:layout_constraintTop_toTopOf="@+id/iv_remind"
        app:layout_constraintBottom_toBottomOf="@+id/iv_remind"
        app:layout_constraintLeft_toRightOf="@+id/iv_remind"
        android:layout_marginLeft="@dimen/dp_11"
        android:text="设计中心"
        android:id="@+id/group_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ff313131"
        android:textSize="15sp" />

    <TextView
        android:layout_marginRight="@dimen/dp_5"
        app:layout_constraintTop_toTopOf="@+id/iv_remind"
        app:layout_constraintBottom_toBottomOf="@+id/iv_remind"
        app:layout_constraintRight_toLeftOf="@+id/group_state"
        android:id="@+id/tv_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="已选0人"
        android:textColor="#ff676767"
        android:textSize="12sp"
        />

    <ImageView
        app:layout_constraintTop_toTopOf="@+id/iv_remind"
        app:layout_constraintBottom_toBottomOf="@+id/iv_remind"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@mipmap/return_up"
        android:id="@+id/group_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_remind"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@color/line_color"
        />

</android.support.constraint.ConstraintLayout>