<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#101a62"
        android:layout_height="@dimen/dp_45"
        android:gravity="center"
        >
        <ImageView
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_width="@dimen/dp_20"
            android:id="@+id/iv_back"
            android:background="@mipmap/ic_left"
            android:layout_height="@dimen/dp_20"
            android:layout_centerVertical="true"
            />
        <TextView
            android:layout_width="match_parent"
            android:text="详情"
            android:gravity="center"
            android:textSize="@dimen/dp_18"
            android:textColor="#ffffff"
            android:layout_height="match_parent" />

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_5"
            android:layout_margin="@dimen/dp_5"
            android:background="@color/colorwhite"
            >
            <TextView
                android:id="@+id/tv_title"
                android:text="公文标题"
                android:textSize="@dimen/dp_14"
                android:textColor="@color/color_a_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                />
            <EditText
                android:layout_marginLeft="@dimen/dp_4"
                android:layout_toRightOf="@id/tv_title"
                android:layout_width="match_parent"
                android:background="@null"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_5"
            android:layout_margin="@dimen/dp_5"
            android:background="@color/colorwhite"
            >
            <TextView
                android:id="@+id/tv_document_image"
                android:text="公文照片"
                android:textSize="@dimen/dp_14"
                android:textColor="@color/color_a_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler"
                android:layout_below="@id/tv_document_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:overScrollMode="never" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_5"
            android:layout_margin="@dimen/dp_5"
            android:background="@color/colorwhite">
            <TextView
                android:id="@+id/tv_roam_title"
                android:text="流转人"
                android:textSize="@dimen/dp_14"
                android:textColor="@color/color_a_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <RelativeLayout
                android:layout_below="@id/tv_roam_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/dp_80"
                >
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycler2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:overScrollMode="never" />
                <com.hulian.oa.views.l_flowview.FlowLayoutScrollView
                    android:id="@+id/flsv"
                    android:padding="@dimen/dp_2"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </com.hulian.oa.views.l_flowview.FlowLayoutScrollView>
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="@dimen/dp_20"
        >
        <TextView
            android:visibility="gone"
            android:id="@+id/tv_disagree"
            android:textSize="@dimen/dp_16"
            android:text="修改"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_40"
            android:gravity="center"
            android:layout_marginRight="@dimen/dp_20"
            android:background="@color/colorCircle"
            android:textColor="@color/white"
            />
        <TextView
            android:id="@+id/tv_agree"
            android:text="发布"
            android:layout_marginLeft="@dimen/dp_16"
            android:textSize="@dimen/dp_20"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_40"
            android:gravity="center"
            android:background="@color/colortip"
            android:textColor="@color/white"
            />
    </LinearLayout>
</LinearLayout>
