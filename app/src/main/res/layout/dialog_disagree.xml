<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#11ffffff">
    <!--android:background="@drawable/free_dialog_bg"-->
    <RelativeLayout
        android:layout_width="@dimen/dp_260"
        android:layout_height="@dimen/dp_240"
        android:layout_centerInParent="true"
        android:background="@drawable/dialog_remind"
        android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_title"
                android:layout_marginTop="@dimen/dp_40"
                android:layout_centerHorizontal="true"
                android:background="@mipmap/disagree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_msg"
                android:gravity="center"
                android:text="驳回王俊杰的报销申请"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_below="@id/iv_title"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="@dimen/dp_30"
                android:layout_centerHorizontal="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/bt_know"
                android:layout_gravity="center_horizontal"
                android:layout_width="@dimen/dp_80"
                android:layout_height="@dimen/dp_28"
                android:background="@drawable/baoxiao_disagree_bg"
                android:gravity="center"
                android:text="确定"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/dp_40"
                android:textColor="@color/bg_red_a"
                android:textSize="16dp" />

    </RelativeLayout>

</RelativeLayout>