<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginLeft="@dimen/dp_10"
    android:layout_marginRight="@dimen/dp_10"
    android:background="#FFFFFF">
    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.hulian.oa.views.CircleImagview
            android:layout_marginTop="@dimen/dp_5"
            android:id="@+id/ci_pic"
            android:src="@drawable/nim_avatar_default"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            />
        <TextView
            android:layout_alignTop="@+id/ci_pic"
            android:id="@+id/tv_name"
            android:text="人称"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_16"
            android:layout_toRightOf="@id/ci_pic"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_alignTop="@+id/ci_pic"
            android:textColor="#676767"
            android:text="2019-11-23"
            android:id="@+id/tv_reply_time"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_14"
            />
        <TextView
            android:layout_marginTop="@dimen/dp_10"
            android:layout_alignLeft="@+id/tv_name"
            android:layout_below="@+id/tv_reply_time"
            android:id="@+id/tv_content"
            android:text="回复内容"
            android:textSize="@dimen/sp_14"
            android:textColor="#676767"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_alignLeft="@+id/tv_name"
            android:layout_marginTop="@dimen/dp_14"
            android:layout_below="@+id/tv_content"
            android:id="@+id/iv_show"
            android:layout_width="@dimen/dp_76"
            android:layout_height="@dimen/dp_76" />
    </RelativeLayout>

    <View
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_60"
        android:layout_marginTop="@dimen/dp_10"
        android:background="#E3E3E3"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
