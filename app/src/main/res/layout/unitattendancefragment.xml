<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_frame_solid_2">


    <LinearLayout
        android:background="@drawable/background_frame_solid_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_marginBottom="@dimen/dp_13"
            android:layout_marginTop="@dimen/dp_13"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/unitAtten_number"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="考勤部门15个"
                android:textColor="#ff37447a"
                android:textSize="@dimen/sp_12"
                />

            <LinearLayout
                android:id="@+id/current_time_liner"
                android:background="@drawable/maintenance_liner_bg"
                android:layout_marginRight="@dimen/dp_30"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/dp_4"
                android:paddingLeft="@dimen/dp_8"
                android:paddingRight="@dimen/dp_8"
                android:paddingBottom="@dimen/dp_4">

                <TextView

                    android:id="@+id/current_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2020-02"
                    android:textColor="#ff37447a"
                    android:textSize="@dimen/sp_12" />

                <ImageView
                    android:id="@+id/current_time_img"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:layout_gravity="center"
                    android:src="@mipmap/return_down"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:background="@drawable/unitatten_dance_liner_bg"
            android:paddingBottom="@dimen/dp_28"
            android:paddingTop="@dimen/dp_28"
            android:paddingLeft="@dimen/dp_12"
            android:paddingRight="@dimen/dp_12"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <TextView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="月平均工时"
                android:textColor="#ff37447a"
                android:textSize="@dimen/sp_12"
                />

            <TextView
                android:id="@+id/unitatt_month_avg"
                android:layout_marginTop="@dimen/dp_12"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ff131314"
                android:textSize="@dimen/sp_14"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <FrameLayout
                android:paddingLeft="@dimen/dp_30"
                android:paddingRight="@dimen/dp_30"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.design.widget.TabLayout
                    android:id="@+id/my_tablayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    app:tabIndicatorFullWidth="false"
                    app:tabIndicatorHeight="2dp"
                    app:tabMaxWidth="0dp"
                    app:tabMode="scrollable"
                    app:tabSelectedTextColor="@color/powder" />
            </FrameLayout>



        </LinearLayout>

    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:background="@drawable/background_frame_solid_1"
        android:layout_marginTop="10dp"
        android:id="@+id/main_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>