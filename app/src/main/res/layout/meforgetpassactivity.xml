<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="#EBEBEB"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/meperson_r1"
        android:layout_width="match_parent"
        android:background="#FFFFFF"
        android:gravity="center_vertical"
        android:layout_height="@dimen/dp_53">
        <RelativeLayout
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/relatout_bg1"
            android:padding="@dimen/dp_12">

            <ImageView
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_15"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@mipmap/ic_left" />

        </RelativeLayout>
        <TextView
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="忘记密码"
            android:textColor="#ff313131"
            android:textSize="@dimen/sp_18" />

    </RelativeLayout>

    <ScrollView
        android:layout_below="@+id/meperson_r1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_marginTop="@dimen/dp_10"
                android:background="#FFFFFF"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_m0"
                        android:layout_marginTop="@dimen/dp_22"
                        android:layout_alignLeft="@+id/tv_m1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="忘记密码？"
                        android:textColor="#ff313131"
                        android:textSize="@dimen/sp_22"
                        />

                    <TextView
                        android:layout_below="@+id/tv_m0"
                        android:id="@+id/tv_m1"
                        android:layout_marginTop="@dimen/dp_30"
                        android:layout_marginLeft="@dimen/dp_22"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="手机号"
                        android:textColor="#ff313131"
                        android:textSize="@dimen/sp_16"
                        />

                    <EditText

                        android:layout_marginBottom="@dimen/dp_15"
                        android:layout_marginRight="@dimen/dp_90"
                        android:layout_marginTop="@dimen/dp_18"
                        android:layout_marginLeft="@dimen/dp_22"
                        android:layout_below="@+id/tv_m1"
                        android:hint="请输入你的手机号"
                        android:id="@+id/tv_me_old_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:background="@null"
                        android:textColor="#313131"
                        android:textSize="@dimen/dp_16"
                        />

                </RelativeLayout>
                <View
                    android:background="#E3E3E3"
                    android:layout_marginLeft="@dimen/dp_21"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0_5"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_m2"
                        android:layout_marginTop="@dimen/dp_30"
                        android:layout_marginLeft="@dimen/dp_22"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="手机验证码"
                        android:textColor="#ff313131"
                        android:textSize="@dimen/sp_16"
                        />

                    <EditText
                        android:layout_marginBottom="@dimen/dp_15"
                        android:layout_marginRight="@dimen/dp_10"
                        android:layout_toLeftOf="@+id/tv_me_forget"
                        android:layout_marginTop="@dimen/dp_18"
                        android:layout_marginLeft="@dimen/dp_22"
                        android:layout_below="@+id/tv_m2"
                        android:hint="请输入验证码"
                        android:id="@+id/ed_verification_code"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:background="@null"
                        android:textColor="#313131"
                        android:textSize="@dimen/dp_16"
                        />
                    <TextView
                        android:background="@drawable/meforgetpass_tv_bg1"
                        android:layout_marginRight="@dimen/dp_20"
                        android:textColor="#FFFFFF"
                        android:layout_alignTop="@+id/ed_verification_code"
                        android:id="@+id/tv_me_forget"
                        android:textSize="@dimen/sp_16"
                        android:layout_alignParentRight="true"
                        android:text="获取验证码"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </RelativeLayout>
                <View
                    android:background="#E3E3E3"
                    android:layout_marginLeft="@dimen/dp_21"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0_5"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_m3"
                        android:layout_marginTop="@dimen/dp_30"
                        android:layout_marginLeft="@dimen/dp_22"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="新密码"
                        android:textColor="#ff313131"
                        android:textSize="@dimen/sp_16"
                        />

                    <EditText
                        android:layout_marginBottom="@dimen/dp_15"
                        android:layout_marginRight="@dimen/dp_90"
                        android:layout_marginTop="@dimen/dp_18"
                        android:layout_marginLeft="@dimen/dp_22"
                        android:layout_below="@+id/tv_m3"
                        android:hint="请输入新密码"
                        android:id="@+id/tv_former"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:background="@null"
                        android:textColor="#313131"
                        android:textSize="@dimen/dp_16"
                        />

                </RelativeLayout>
                <View
                    android:background="#E3E3E3"
                    android:layout_marginLeft="@dimen/dp_21"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0_5"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_m4"
                        android:layout_marginTop="@dimen/dp_30"
                        android:layout_marginLeft="@dimen/dp_22"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="确认密码"
                        android:textColor="#ff313131"
                        android:textSize="@dimen/sp_16"
                        />

                    <EditText
                        android:layout_marginBottom="@dimen/dp_15"
                        android:layout_marginRight="@dimen/dp_90"
                        android:layout_marginTop="@dimen/dp_18"
                        android:layout_marginLeft="@dimen/dp_22"
                        android:layout_below="@+id/tv_m4"
                        android:hint="再次输入密码"
                        android:id="@+id/tv_affirm"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:background="@null"
                        android:textColor="#313131"
                        android:textSize="@dimen/dp_16"
                        />

                </RelativeLayout>
                <View
                    android:layout_marginBottom="@dimen/dp_20"
                    android:background="#E3E3E3"
                    android:layout_marginLeft="@dimen/dp_21"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0_5"/>

            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_50"
                android:layout_marginBottom="@dimen/dp_30">
                <Button
                    android:layout_marginRight="@dimen/dp_70"
                    android:layout_marginLeft="@dimen/dp_70"
                    android:id="@+id/btn_modification"
                    android:textSize="@dimen/sp_14"
                    android:text="立即修改"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_36"
                    android:gravity="center"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/l_leave_submit_bg"
                    android:textColor="@color/white"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="@dimen/dp_20"
                    android:layout_centerHorizontal="true"
                    />
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>