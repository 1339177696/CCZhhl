<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_all"
    >
    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:layout_height="@dimen/dp_45">
        <ImageView
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_width="@dimen/dp_15"
            android:id="@+id/iv_back"
            android:layout_centerVertical="true"
            android:background="@mipmap/ic_left"
            android:layout_height="@dimen/dp_15" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="指令详情"
            android:textColor="#313131"
            android:textSize="@dimen/sp_17" />
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp"
        android:padding="@dimen/dp_10"
        android:background="@color/bg_all"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/details_img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:orientation="vertical"

        android:background="@drawable/edit_background3"
        android:layout_margin="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        >
        <TextView
            android:layout_marginLeft="@dimen/dp_22"
            android:id="@+id/tv_content1"
            android:layout_marginTop="@dimen/dp_10"
            android:drawableLeft="@mipmap/qj_leibie_icon_qgl"
            android:textSize="@dimen/dp_16"
            android:textColor="#313131"
            android:drawablePadding="@dimen/dp_2"
            android:text="指令内容"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <TextView
            android:layout_below="@id/tv_content1"
            android:layout_marginLeft="@dimen/dp_32"
            android:id="@+id/create_coontent"
            android:layout_marginTop="@dimen/dp_15"
            android:textSize="@dimen/dp_13"
            android:textColor="#313131"
            android:drawablePadding="@dimen/dp_5"
            android:text="1111111"
            android:maxLines="3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <TextView
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:id="@+id/create_time"
            android:layout_marginTop="@dimen/dp_10"
            android:textSize="12sp"
            android:textColor="#A8A8A8"
            android:text="日期：2019-07-14"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

    </RelativeLayout>
    <TextView
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="match_parent"
        android:background="@color/color_xian"
        android:layout_height="@dimen/dp_0_5" />
    <LinearLayout
        android:layout_gravity="bottom"
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:padding="@dimen/dp_10"
        >

        <LinearLayout
            android:paddingBottom="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_height="wrap_content">
            <TextView
                android:drawableLeft="@mipmap/qj_chaosongren_icon_qgl"
                android:drawablePadding="@dimen/dp_2"
                android:text="接收人"
                android:textSize="@dimen/dp_16"
                android:textColor="#313131"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="已接受"
                android:gravity="right"
                android:id="@+id/tv_name2"
                android:layout_weight="1"
                android:textSize="@dimen/dp_16"
                android:textColor="@color/black"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <TextView
            android:id="@+id/tv_feedback_content"
            android:layout_marginLeft="@dimen/dp_25"
            android:layout_marginTop="@dimen/dp_10"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/black"
            android:maxLines="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    </LinearLayout>
</LinearLayout>