<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EBEBEB"
    android:orientation="vertical">

    <LinearLayout
        android:background="@mipmap/bg_img"
        android:id="@+id/work_leave_list_liner"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_170"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_marginTop="@dimen/dp_25"
            android:id="@+id/iv_back"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_53"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_15"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_10"
                android:background="@mipmap/ic_left_white" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="考勤管理"
                android:textColor="#ffffff"
                android:textSize="@dimen/dp_18" />


            <TextView
                android:id="@+id/tv_close"
                android:layout_marginRight="@dimen/dp_11"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="下属打卡"
                android:textColor="#ffffffff"
                android:textSize="14sp"
                />

        </RelativeLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_40"
            android:paddingRight="@dimen/dp_40">

            <android.support.design.widget.TabLayout
                android:id="@+id/my_tablayout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:layout_gravity="center_horizontal"
                app:tabBackground="@android:color/transparent"
                app:tabIndicatorColor="@color/colorwhite"
                app:tabIndicatorFullWidth="false"
                app:tabMaxWidth="0dp"
                app:tabMode="fixed"
                app:tabRippleColor="@android:color/transparent"
                app:tabSelectedTextColor="@color/colorwhite"
                app:tabTextAppearance="@style/TabLayoutTextSize"
                app:tabTextColor="#A0C2F3" />
        </FrameLayout>

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_125"
        android:background="@drawable/background_frame_solid_1"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp">

        <android.support.v4.view.ViewPager
            android:id="@+id/my_viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </FrameLayout>


</RelativeLayout>
