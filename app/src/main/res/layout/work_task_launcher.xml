<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#FFFFFF"
        android:id="@+id/iv_back"
        android:gravity="center_vertical"
        android:layout_height="@dimen/dp_53">
        <ImageView
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_width="@dimen/dp_15"

            android:layout_centerVertical="true"
            android:background="@mipmap/ic_left"
            android:layout_height="@dimen/dp_15" />
        <TextView
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="发起任务"
            android:textColor="#ff313131"
            android:textSize="@dimen/sp_17" />
    </RelativeLayout>
    <View
        android:background="#EBEBEB"
        android:layout_width="match_parent"
        android:layout_height="10dp"/>
<ScrollView
    android:scrollbars="none"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_20"
        android:background="@color/colorwhite"
        >
        <LinearLayout
            android:padding="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="52dp">

                <ImageView
                    android:id="@+id/img1"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/renwu_faqi_icon1"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />
                <TextView
                    android:layout_marginLeft="9dp"
                    android:layout_toRightOf="@+id/img1"
                    android:id="@+id/tv_title"
                    android:text="任务标题"
                    android:textColor="#ff313131"
                    android:textSize="@dimen/sp_14"
                    android:layout_width="@dimen/dp_70"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content" />
                <EditText
                    android:paddingRight="@dimen/dp_15"
                    android:gravity="right"
                    android:hint="请输入标题"
                    android:layout_centerVertical="true"
                    android:id="@+id/et_title"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_14"
                    android:background="@null"
                    android:layout_toRightOf="@id/tv_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
            </RelativeLayout>
            <View
                android:layout_marginLeft="10dp"
                android:background="@color/color_b_gray"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp">

                <ImageView
                    android:id="@+id/img2"
                    android:src="@mipmap/renwu_faqi_icon2"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />
                <TextView
                    android:layout_marginLeft="9dp"
                    android:layout_toRightOf="@+id/img2"
                    android:id="@+id/tv_task_details"
                    android:text="任务详情"
                    android:textColor="#ff313131"
                    android:textSize="@dimen/sp_14"
                    android:layout_width="@dimen/dp_70"
                    android:layout_height="wrap_content" />

                <EditText
                    android:layout_marginLeft="10dp"
                    android:paddingLeft="@dimen/dp_15"
                    android:hint="请输入详情"
                    android:id="@+id/et_task_details"
                    android:layout_below="@id/tv_task_details"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_150"
                    android:background="@drawable/l_task_launch_content_bg"
                    android:gravity="start"
                    android:layout_marginTop="15dp"
                    android:paddingTop="10dp"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_52">

                <ImageView
                    android:id="@+id/gw_img1111"
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/document_annex_icon_qgl" />

                <TextView
                    android:id="@+id/gw_text1111"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="9dp"
                    android:layout_toRightOf="@+id/gw_img1111"
                    android:text="公文附件"
                    android:textColor="#ff313131"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/file_btn"
                    android:gravity="right"
                    android:layout_toRightOf="@+id/gw_text1111"
                    android:layout_marginRight="@dimen/dp_27"
                    android:layout_centerVertical="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="点击选择附件"
                    android:textColor="#085DD6"
                    android:textSize="14sp"
                    />




            </RelativeLayout>
            <View
                android:layout_marginLeft="10dp"
                android:background="@color/color_b_gray"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_52">

                <ImageView
                    android:layout_centerVertical="true"
                    android:id="@+id/gw_img3"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@mipmap/renwu_faqi_icon3" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="9dp"
                    android:layout_toRightOf="@+id/gw_img3"
                    android:text="公文照片"
                    android:textColor="#ff313131"
                    android:textSize="14sp" />
            </RelativeLayout>
            <View
                android:layout_marginLeft="10dp"
                android:background="@color/color_b_gray"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="22dp"
                android:layout_marginTop="5dp"
                android:overScrollMode="never" />

            <View
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginLeft="10dp"
                android:background="@color/color_b_gray"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:id="@+id/rl_opreator"
                android:layout_marginTop="@dimen/dp_5"
                >

                <ImageView
                    android:layout_centerVertical="true"
                    android:id="@+id/img3"
                    android:src="@mipmap/renwu_faqi_icon3"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />
                <TextView
                    android:layout_marginLeft="9dp"
                    android:id="@+id/tv_opreator_title"
                    android:text="执行人"
                    android:layout_toRightOf="@+id/img3"
                    android:textColor="#ff313131"
                    android:textSize="@dimen/sp_14"
                    android:layout_width="@dimen/dp_70"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    />
                <TextView
                    android:ellipsize="end"
                    android:id="@+id/tv_opreator"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_14"
                    android:background="@null"
                    android:layout_toRightOf="@id/tv_opreator_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_30"
                    android:layout_centerVertical="true"
                    />
                <ImageView
                    android:background="@mipmap/renwu_faqi_icon4"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_below="@id/tv_roam_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/dp_80"
                >

                <com.hulian.oa.views.NonScrollGridView
                    android:id="@+id/gv_test"
                    android:numColumns="4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <!--<android.support.v7.widget.RecyclerView-->
                    <!--android:id="@+id/recycler2"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_marginLeft="5dp"-->
                    <!--android:layout_marginTop="5dp"-->
                    <!--android:overScrollMode="never" />-->
                <!--<com.hulian.oa.views.l_flowview.FlowLayoutScrollView-->
                    <!--android:id="@+id/flsv"-->
                    <!--android:padding="@dimen/dp_2"-->
                    <!--android:visibility="gone"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content">-->
                <!--</com.hulian.oa.views.l_flowview.FlowLayoutScrollView>-->
            </RelativeLayout>


            <View
                android:background="@color/color_b_gray"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:id="@+id/rl_copyperson"
                android:layout_marginTop="@dimen/dp_5">

                <ImageView
                    android:layout_centerVertical="true"
                    android:id="@+id/img5"
                    android:src="@mipmap/renwu_faqi_icon5"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />
                <TextView
                    android:layout_marginLeft="9dp"
                    android:layout_toRightOf="@+id/img5"
                    android:id="@+id/tv_copyperson_title"
                    android:text="抄送人"
                    android:textColor="#ff313131"
                    android:textSize="@dimen/sp_14"
                    android:layout_width="@dimen/dp_70"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    />

                <FrameLayout
android:visibility="gone"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_toLeftOf="@+id/iimmgg"
                    android:id="@+id/fl_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_copyperson"
                        android:text="测试内容"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/l_bg_shape"
                        android:layout_gravity="center"
                        android:layout_marginRight="@dimen/dp_6"
                        android:layout_marginLeft="@dimen/dp_2"
                        android:gravity="center"
                        android:paddingTop="@dimen/dp_2"
                        android:paddingBottom="@dimen/dp_2"
                        android:paddingLeft="@dimen/dp_5"
                        android:paddingRight="@dimen/dp_5"
                        android:textSize="@dimen/sp_10" />
                    <LinearLayout
                        android:id="@+id/ll_del"
                        android:layout_width="@dimen/dp_30"
                        android:layout_height="@dimen/dp_35"
                        android:layout_alignParentRight="true"
                        android:layout_gravity="right|top"
                        android:orientation="vertical">
                        <ImageView
                            android:id="@+id/iv"
                            android:layout_width="@dimen/dp_15"
                            android:layout_marginRight="@dimen/dp_1"
                            android:layout_height="@dimen/dp_15"
                            android:scaleType="centerCrop"
                            android:layout_gravity="right|top"
                            android:src="@mipmap/ic_cha" />
                    </LinearLayout>
                </FrameLayout>
                <!--<TextView-->
                    <!--android:id="@+id/tv_copyperson"-->
                    <!--android:layout_marginLeft="@dimen/dp_10"-->
                    <!--android:textColor="@color/black"-->
                    <!--android:textSize="@dimen/dp_14"-->
                    <!--android:background="@null"-->
                    <!--android:layout_toRightOf="@id/tv_copyperson_title"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_marginRight="@dimen/dp_30"-->
                    <!--android:layout_centerVertical="true"-->
                    <!--/>-->
                <ImageView
                    android:id="@+id/iimmgg"
                    android:background="@mipmap/renwu_faqi_icon4"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="20dp"
                    android:layout_height="20dp"/>
            </RelativeLayout>
            <View
                android:background="@color/color_b_gray"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:id="@+id/rl_deadline"
                android:layout_marginTop="@dimen/dp_5"
                >

                <ImageView
                    android:layout_centerVertical="true"
                    android:id="@+id/img6"
                    android:src="@mipmap/renwu_faqi_icon6"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />
                <TextView
                    android:layout_marginLeft="9dp"
                    android:layout_toRightOf="@+id/img6"
                    android:id="@+id/tv_deadline_title"
                    android:text="截止时间"
                    android:textColor="#ff313131"
                    android:textSize="@dimen/sp_14"
                    android:layout_width="@dimen/dp_70"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    />
                <TextView
                    android:id="@+id/tv_deadline"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dp_14"
                    android:background="@null"
                    android:layout_toRightOf="@id/tv_deadline_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_30"
                    android:layout_centerVertical="true"
                    />
                <ImageView
                    android:background="@mipmap/mine_more"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <View
                android:background="@color/color_b_gray"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"/>
            <RelativeLayout
                android:id="@+id/rl_remind"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginTop="@dimen/dp_5"
                >
                <ImageView
                    android:layout_centerVertical="true"
                    android:id="@+id/img7"
                    android:src="@mipmap/renwu_faqi_icon7"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />
                <TextView
                    android:layout_marginLeft="9dp"
                    android:layout_toRightOf="@+id/img7"
                    android:id="@+id/tv_remind_title"
                    android:text="提醒"
                    android:textColor="#ff313131"
                    android:textSize="@dimen/sp_14"
                    android:layout_width="@dimen/dp_70"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    />
                <TextView
                    android:id="@+id/tv_remind"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_14"
                    android:background="@null"
                    android:layout_toRightOf="@id/tv_remind_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_30"
                    android:layout_centerVertical="true"
                    />
                <ImageView
                    android:background="@mipmap/mine_more"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <View
                android:background="@color/color_b_gray"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_marginBottom="30dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_back_instruct"
                android:textSize="@dimen/sp_14"
                android:text="发起"
                android:layout_width="@dimen/dp_260"
                android:layout_height="@dimen/dp_40"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/renwu_faqi_btn_yuan_qgl1"
                android:textColor="@color/white"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/dp_20"
                android:layout_centerHorizontal="true"
                />
        </RelativeLayout>
    </LinearLayout>

</ScrollView>

</LinearLayout>
