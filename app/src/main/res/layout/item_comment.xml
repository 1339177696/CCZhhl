<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="#ffffff"
    android:padding="@dimen/dp_7"
    android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_alignParentLeft="true"
                android:id="@+id/iv_head"
                android:text="12"
                android:textColor="#ffffff"
               android:textSize="@dimen/sp_12"
                android:gravity="center"
               android:background="@mipmap/head_bg"
                android:layout_width="@dimen/dp_33"
                android:layout_height="@dimen/dp_33"
                />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_toRightOf="@+id/iv_head"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="省厅"
                android:textColor="#313131"
                android:textSize="@dimen/sp_13" />
            <TextView
                android:layout_alignLeft="@id/tv_name"
                android:layout_marginTop="@dimen/dp_2"
                android:id="@+id/tv_content"
                android:layout_below="@id/tv_name"
                android:layout_toRightOf="@+id/iv_head"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:ellipsize="end"
                android:textColor="#000000"
                android:textSize="@dimen/sp_11"
                android:layout_marginRight="@dimen/dp_50"
                android:text="省厅大的说法都是"
                />
            <TextView
                android:layout_below="@id/tv_content"
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_marginTop="@dimen/dp_2"
                android:id="@+id/time"
                android:layout_toRightOf="@+id/iv_head"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/colorText"
                android:textSize="@dimen/sp_9"
                android:text="9小时评论"
                />
           <LinearLayout
               android:visibility="gone"
               android:layout_marginLeft="@dimen/dp_10"
               android:layout_marginTop="@dimen/dp_10"
               android:layout_below="@id/tv_content"
               android:layout_toRightOf="@+id/iv_head"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:gravity="center_vertical"
               >
               <ImageView
                   android:layout_width="@dimen/dp_15"
                   android:background="@mipmap/ic_launcher"
                   android:layout_height="@dimen/dp_15" />
               <TextView
                   android:layout_marginLeft="@dimen/dp_5"
                   android:id="@+id/tv_time"
                   android:layout_below="@id/tv_name"
                   android:layout_toRightOf="@+id/iv_head"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:maxLines="1"
                   android:ellipsize="end"
                   android:textColor="#000000"
                   android:textSize="@dimen/sp_12"
                   android:text="2019-01-09"
                   />
               <TextView
                   android:layout_marginLeft="@dimen/dp_5"
                   android:layout_below="@id/tv_name"
                   android:layout_toRightOf="@+id/iv_head"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:maxLines="1"
                   android:ellipsize="end"
                   android:textColor="#ff0000"
                   android:textSize="@dimen/sp_12"
                   android:text="新闻动态"
                   />
           </LinearLayout>
            <TextView
                android:id="@+id/tv_dianzanCount"
                android:layout_alignParentRight="true"
                android:text="122"
                android:textSize="@dimen/sp_11"
                android:textColor="#999999"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/iv_dianzan"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:layout_centerVertical="true"
                android:layout_marginEnd="0dp"
                android:layout_marginRight="0dp"
                android:layout_toStartOf="@+id/tv_dianzanCount"
                android:layout_toLeftOf="@id/tv_dianzanCount"
                android:background="@mipmap/ic_dianzan"
                android:textColor="@color/colorText" />
        </RelativeLayout>

</LinearLayout>