<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".work.file.admin.activity.notice.NoticeSelPartActivity">
    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:layout_height="@dimen/dp_45">
        <FrameLayout
            android:id="@+id/iv_back"
            android:layout_width="@dimen/dp_45"
            android:layout_height="@dimen/dp_45">
        <ImageView
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_width="@dimen/dp_15"
            android:layout_centerVertical="true"
            android:background="@mipmap/ic_left"
            android:layout_height="@dimen/dp_15" />
        </FrameLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="选择部门"
            android:textColor="#313131"
            android:textSize="@dimen/sp_17" />

        <Button
            android:layout_marginRight="@dimen/dp_15"
            android:textColor="#FFFFFF"
            android:background="@drawable/zz_btn_bg_qgl"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:id="@+id/bt_commit"
            android:layout_width="@dimen/dp_46"
            android:text="确定"
            android:textSize="12sp"
            android:layout_height="@dimen/dp_21" />
    </RelativeLayout>
    <RelativeLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:orientation="horizontal"

        android:layout_height="wrap_content">
        <RelativeLayout
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:background="#EBEBEB"
            android:layout_height="@dimen/dp_56">
            <CheckBox
                android:layout_marginLeft="@dimen/dp_28"
                android:button="@null"
                android:layout_centerVertical="true"
                android:id="@+id/ckb_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@drawable/zz_text_color_qgl"
                android:text="全选"/>
        </RelativeLayout>
    </RelativeLayout>
    <ListView
        android:id="@+id/list_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </ListView>
</LinearLayout>