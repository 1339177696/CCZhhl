<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#EBEBEB"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="20dp">


    <ImageView
        android:id="@+id/socked_img"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@mipmap/socked_app_takeleave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <TextView
        android:id="@+id/socked_tv_title"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/socked_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请假推送"
        android:textColor="#ff010101"
        android:textSize="14sp"
        />


    <TextView
        android:id="@+id/socked_tv_time"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2020-02-24  17:09"
        android:textColor="#ff010101"
        android:textSize="12sp"
        />

    <LinearLayout
        android:paddingTop="@dimen/dp_18"
        android:paddingRight="@dimen/dp_15"
        android:paddingLeft="@dimen/dp_15"
        android:background="@drawable/background_frame_solid_1"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/socked_tv_title"
        app:layout_constraintLeft_toLeftOf="@+id/socked_tv_title"
        app:layout_constraintRight_toRightOf="@+id/socked_tv_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="张明娟提交的补卡申请"
            android:textColor="#ff010101"
            android:textSize="14sp"
            />
        <LinearLayout
            android:layout_marginTop="@dimen/dp_16"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_gravity="right"
                android:id="@+id/socked_tv1"
                android:text="补卡原因"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/socked_tv_one"
                android:layout_marginLeft="@dimen/dp_10"
                android:text="忘记打卡"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="@dimen/dp_10"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/socked_tv2"
                android:text="补卡班次"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/socked_tv_two"
                android:layout_marginLeft="@dimen/dp_10"
                android:text="2020-02-13 星期四"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="@dimen/dp_10"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/socked_tv3"
                android:text="补卡时间"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/socked_tv_three"
                android:layout_marginLeft="@dimen/dp_10"
                android:text="2020-02-13 08:30"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="@dimen/dp_10"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/socked_tv4"
                android:text="所在部门"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/socked_tv_four"
                android:layout_marginLeft="@dimen/dp_10"
                android:text="设计部"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


        </LinearLayout>

        <TextView
            android:id="@+id/socked_tv_five"
            android:layout_marginBottom="@dimen/dp_18"
            android:background="@drawable/item_socked_tv_bg1"
            android:layout_gravity="right"
            android:textSize="14sp"
            android:text="待审批"
            android:textColor="#FEA800"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </LinearLayout>

</android.support.constraint.ConstraintLayout>