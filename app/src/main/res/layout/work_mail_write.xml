<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:layout_height="@dimen/dp_45">
        <ImageView
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_width="@dimen/dp_15"
            android:id="@+id/iv_back_x"
            android:layout_centerVertical="true"
            android:background="@mipmap/ic_left"
            android:layout_height="@dimen/dp_15" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="写邮件"
            android:textColor="#313131"
            android:textSize="@dimen/sp_17" />
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:background="@color/color_xian"
        android:layout_height="@dimen/dp_0_5" />
    <ScrollView
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:background="@color/colorwhite"
        android:layout_marginBottom="@dimen/dp_20"
        android:paddingLeft="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_52"
            android:paddingLeft="@dimen/dp_10"
            android:gravity="center_vertical"
            android:paddingRight="@dimen/dp_10">
            <ImageView
                android:background="@mipmap/mail_sender_icon"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="@dimen/dp_18"
                android:layout_height="@dimen/dp_18" />
            <TextView
                android:layout_marginLeft="@dimen/dp_10"
                android:text="发件人"
                android:textColor="#313131"
                android:textSize="@dimen/dp_14"
                android:layout_centerVertical="true"
                android:layout_width="@dimen/dp_50"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_user"
                android:layout_centerVertical="true"
                android:textColor="#676767"
                android:textSize="@dimen/dp_14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
<TextView
    android:layout_width="match_parent"
    android:background="@color/color_xian"
    android:layout_height="@dimen/dp_0_5" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_52"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10">
            <ImageView
                android:background="@mipmap/renwu_faqi_icon5"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="@dimen/dp_18"
                android:layout_height="@dimen/dp_18" />
            <TextView
                android:id="@+id/tv_receive_person"
                android:text="收件人"
                android:layout_marginLeft="@dimen/dp_10"
                android:textColor="@color/black"
                android:layout_alignParentRight="true"
                android:textSize="@dimen/dp_14"
                android:layout_centerVertical="true"
                android:layout_width="@dimen/dp_50"
                android:layout_height="wrap_content" />
            <TextView
                android:visibility="invisible"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/my_img1"
                android:id="@+id/work_mail_shoujianren"
                android:textColor="@color/black"
                android:textSize="@dimen/dp_14"
                android:layout_toRightOf="@id/tv_receive_person"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/my_img1"
                android:background="@mipmap/qj_zuzhi_jigou_icon_qgl"
                android:layout_centerVertical="true"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20" />
        </LinearLayout>
        <com.hulian.oa.views.MyGridView
            android:id="@+id/gv_test"
            android:paddingBottom="@dimen/dp_5"
            android:numColumns="4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:background="@color/color_xian"
            android:layout_height="@dimen/dp_0_5" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_52"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10">
            <ImageView
                android:background="@mipmap/mail_make_icon"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="@dimen/dp_18"
                android:layout_height="@dimen/dp_18" />
            <TextView
                android:id="@+id/tv_chaosong_person"
                android:text="抄送人"
                android:layout_marginLeft="@dimen/dp_10"
                android:textColor="@color/black"
                android:textSize="@dimen/dp_14"
                android:layout_centerVertical="true"
                android:layout_width="@dimen/dp_50"
                android:layout_height="wrap_content" />
            <TextView
                android:visibility="invisible"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/my_img1"
                android:id="@+id/work_mail_shoujianren2"
                android:textColor="@color/black"
                android:textSize="@dimen/dp_14"
                android:layout_toRightOf="@id/tv_receive_person"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/my_img2"
                android:background="@mipmap/qj_zuzhi_jigou_icon_qgl"
                android:layout_centerVertical="true"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20" />
        </LinearLayout>
        <com.hulian.oa.views.MyGridView
            android:id="@+id/gv_test2"
            android:numColumns="4"
            android:paddingBottom="@dimen/dp_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:background="@color/color_xian"
            android:layout_height="@dimen/dp_0_5" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_52"
            android:gravity="center_vertical"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10">
            <ImageView
                android:background="@mipmap/mail_title_icon"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="@dimen/dp_18"
                android:layout_height="@dimen/dp_18" />
            <TextView
                android:layout_marginLeft="@dimen/dp_10"
                android:id="@+id/tv_theme_title"
                android:text="主题"
                android:textColor="@color/black"
                android:textSize="@dimen/dp_14"
                android:layout_centerVertical="true"
                android:layout_width="@dimen/dp_50"
                android:layout_height="wrap_content" />
            <EditText
                android:background="@null"
                android:id="@+id/tv_theme"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_14"
                android:maxLength="20"
                android:maxLines="2"
                android:hint="请输入邮件主题"
                android:gravity="right|center_vertical"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_toRightOf="@id/tv_theme_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <View
            android:background="@color/color_xian"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_5"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_52"
            android:paddingLeft="@dimen/dp_10"
            android:gravity="center_vertical"
            android:paddingRight="@dimen/dp_10">
            <ImageView
                android:background="@mipmap/mail_cont_icon"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="@dimen/dp_18"
                android:layout_height="@dimen/dp_18" />
            <TextView
                android:layout_marginLeft="@dimen/dp_10"
                android:text="内容"
                android:textColor="#313131"
                android:textSize="@dimen/dp_14"
                android:layout_centerVertical="true"
                android:layout_width="@dimen/dp_50"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_centerVertical="true"
                android:textColor="#676767"
                android:textSize="@dimen/dp_14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <RelativeLayout
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
           >

            <EditText
                android:id="@+id/et_content"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_200"
                android:layout_marginRight="@dimen/dp_10"
                android:background="@drawable/l_write_mail_content_bg"
                android:gravity="start|top"
                android:padding="@dimen/dp_10"
                android:textColor="@color/black"
                android:textSize="@dimen/dp_14" />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10">
            <ImageView
                android:background="@mipmap/mail_cont_icon"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20" />
            <TextView
                android:id="@+id/tv_annex_title"
                android:text="附件:"
                android:layout_marginLeft="@dimen/dp_10"
                android:textColor="@color/black"
                android:textSize="@dimen/dp_14"
                android:layout_centerVertical="true"
                android:layout_width="@dimen/dp_50"
                android:layout_height="wrap_content" />
            <EditText
                android:background="@null"
                android:text="点击选择文件"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:enabled="true"
                android:textColor="@color/color_a_blue"
                android:textSize="@dimen/dp_14"
                android:id="@+id/et_annex"
                android:layout_toRightOf="@id/tv_annex_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
        <View
            android:layout_marginTop="@dimen/dp_10"
            android:background="@color/color_xian"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_5"/>

        <Button
            android:layout_marginBottom="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_25"
            android:id="@+id/tv_send"
            android:textSize="@dimen/sp_14"
            android:text="发起"
            android:layout_width="@dimen/dp_220"
            android:layout_height="@dimen/dp_36"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/l_leave_submit_bg"
            android:textColor="@color/white"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            />
    </LinearLayout>
    </ScrollView>
</LinearLayout>