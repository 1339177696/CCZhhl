<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/edit_background3"
    android:padding="@dimen/dp_10"
    android:layout_marginLeft="@dimen/dp_15"
    android:layout_marginRight="@dimen/dp_15"
    android:layout_marginTop="@dimen/dp_10"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_70">
    <LinearLayout
        android:layout_centerVertical="true"
        android:id="@+id/iv_image"
        android:layout_width="@dimen/dp_45"
        android:layout_height="@dimen/dp_45"
        android:background="@drawable/edit_notice_qgl"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_time_qgl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="2019/09"
            android:textColor="#F25542"
            android:textSize="@dimen/sp_10" />

        <TextView
            android:id="@+id/tv_time_qgl2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-8dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="12"
            android:textColor="#F25542"
            android:textSize="@dimen/sp_18" />
    </LinearLayout>


    <TextView
        android:id="@+id/tv_title"
        android:layout_toRightOf="@id/iv_image"
        android:layout_width="wrap_content"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_toLeftOf="@+id/tv_time"
        android:text="title"
        android:textColor="#313131"
        android:maxLines="1"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginLeft="@dimen/dp_10"
        android:textSize="@dimen/sp_9"
        android:layout_height="wrap_content" />
    <TextView
        android:textSize="@dimen/sp_7"
        android:layout_marginTop="@dimen/dp_5"
        android:id="@+id/tv_content"
        android:layout_below="@id/tv_title"
        android:layout_width="wrap_content"
        android:text="------"
        android:layout_toRightOf="@id/iv_image"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_centerVertical="true"
        android:layout_height="wrap_content" />
    <TextView
        android:textSize="@dimen/sp_7"
        android:layout_toLeftOf="@+id/liner_mt1"
        android:layout_marginTop="@dimen/dp_5"
        android:id="@+id/tv_des"
        android:layout_below="@id/tv_content"
        android:layout_width="wrap_content"
        android:text="999999"
        android:layout_toRightOf="@id/iv_image"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_height="wrap_content" />


    <LinearLayout
        android:id="@+id/liner_mt1"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_below="@id/tv_content"
        android:layout_width="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/im_src"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:src="@mipmap/chushen_item" />

    </LinearLayout>
</RelativeLayout>