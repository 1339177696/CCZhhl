<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_centerVertical="true"
        android:id="@+id/iv_meet_room"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        android:background="@mipmap/ic_room"
        />
    <RelativeLayout
        android:layout_toRightOf="@id/iv_meet_room"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_100"
        android:layout_marginLeft="@dimen/dp_10"
        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            >
            <TextView
                android:id="@+id/tv_meet_room_num"
                android:text="14号楼1号会议室"
                android:textColor="#313131"
                android:textSize="14dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginTop="@dimen/dp_5"
                android:layout_below="@id/tv_meet_room_num"
                android:id="@+id/tv_meet_count"
                android:text="容纳人数：100"
                android:textColor="#676767"
                android:textSize="13sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/meetingContacts"
                android:layout_marginTop="@dimen/dp_5"
                android:textSize="13sp"
                android:layout_below="@+id/tv_meet_count"
                android:text="会议联系人："
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/meetingPhone"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_below="@+id/meetingContacts"
                android:textSize="13sp"
                android:text="联系电话："
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_80">

        <RelativeLayout
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginTop="@dimen/dp_15"
                android:id="@+id/tv_sel_room"
                android:text="选择"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_10"
                android:background="@drawable/bt_7background_meet"
                android:layout_width="55dp"
                android:layout_height="21dp"
                android:gravity="center"
                />

            <ImageView
                android:id="@+id/phone_ls"
                android:layout_alignLeft="@+id/tv_sel_room"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_below="@+id/tv_sel_room"
                android:layout_marginRight="@dimen/dp_10"
                android:src="@mipmap/dh_icon"
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_25" />
        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>