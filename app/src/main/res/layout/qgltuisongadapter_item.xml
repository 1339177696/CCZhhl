<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_150"
    android:layout_marginLeft="@dimen/dp_10"
    android:layout_marginTop="@dimen/dp_10"
    android:layout_marginRight="@dimen/dp_10"
    android:background="@drawable/liner_border_gb_qgl">
    <ImageView
        android:id="@+id/iv_remind"
        android:layout_width="@dimen/dp_9"
        android:layout_height="@dimen/dp_9"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_22"
        android:background="@drawable/liner_yuan_qgl1" />
    <RelativeLayout
        android:id="@+id/lv_liner_my"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dp_18"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_toRightOf="@+id/iv_remind"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/rela_my"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10">

            <TextView
                android:id="@+id/tv_title"
                android:textColor="#ff313131"
                android:textSize="@dimen/dp_15"
                android:text="标题"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_20"
                android:text="2019-17-01"
                android:textColor="#ff676767"
                android:textSize="12sp" />

        </RelativeLayout>

        <TextView
            android:layout_marginBottom="@dimen/dp_5"
            android:layout_above="@+id/view"
            android:layout_below="@+id/rela_my"
            android:id="@+id/tv_context"
            android:lineSpacingExtra="@dimen/dp_3"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"
            android:textSize="@dimen/dp_14"
            android:text="内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    <View
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:id="@+id/view"
        android:layout_marginBottom="@dimen/dp_30"
        android:layout_alignParentBottom="true"
        android:background="#E3E3E3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"/>

        <TextView
            android:layout_marginBottom="@dimen/dp_6"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_alignParentBottom="true"
            android:text="详情"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_marginBottom="@dimen/dp_6"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:src="@mipmap/qj_selected_icon_qgl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>


</RelativeLayout>