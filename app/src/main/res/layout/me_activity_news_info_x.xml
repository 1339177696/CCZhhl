<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:focusableInTouchMode="true">
    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:background="#101a62"
        android:gravity="center_vertical"
        android:layout_height="@dimen/dp_53">
        <ImageView
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_width="@dimen/dp_20"
            android:id="@+id/iv_back"
            android:layout_centerVertical="true"
            android:background="@mipmap/ic_left"
            android:layout_height="@dimen/dp_20" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:visibility="invisible"
            android:text="柜门管理"
            android:textColor="#ffffff"
            android:textSize="@dimen/sp_22" />
    </RelativeLayout>
    <android.support.v4.widget.NestedScrollView
        android:id="@+id/scrollable"
        android:layout_below="@id/rl_title"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/dp_10"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:maxLines="2"
        android:text="长春市大多是发送到发第三发士大夫"
        android:textColor="#000000"
        android:textSize="@dimen/sp_25"
        android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_dis"
            android:layout_width="match_parent"
            android:maxLines="1"
            android:text="长春市大多    3小时前"
            android:textColor="@color/colorText"
            android:layout_marginTop="@dimen/dp_10"
            android:textSize="@dimen/sp_12"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_content"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_width="match_parent"
            android:text="长春市大多是发送到发第三发士大夫春市大多是发送到发第三发士大夫春市大多是发送到发第三发士大夫春市大多是发送到发第三发士大夫"
            android:textColor="#000000"
            android:textSize="@dimen/sp_15"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="match_parent"
            android:maxLines="2"
            android:id="@+id/tv_author"
            android:text="责任编辑：刘文超"
            android:textColor="@color/colorText"
            android:layout_marginTop="@dimen/dp_10"
            android:textSize="@dimen/sp_12"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center_vertical"
            android:layout_height="@dimen/dp_45">
            <EditText
                android:id="@+id/et_content"
                android:layout_weight="8"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_40" />
            <Button
                android:id="@+id/bt_comment"
                android:text="评论"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="@dimen/dp_40" />
            <Button
                android:id="@+id/bt_top"
                android:text="置顶"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="@dimen/dp_40" />
            <ImageView
                android:id="@+id/bt_store"
               android:background="@mipmap/ic_store"
                android:layout_width="28dp"
                android:layout_height="28dp" />
        </LinearLayout>
    </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>