<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:id="@+id/work_mail_main"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/work_mail_rela_my1"
            android:background="@mipmap/agency_bannerbg"
            android:layout_width="match_parent"
            android:paddingTop="@dimen/dp_20"
            android:layout_height="@dimen/dp_170"
 >
            <FrameLayout
                android:id="@+id/iv_back"
                android:layout_width="@dimen/dp_45"
                android:layout_height="@dimen/dp_45">
        <ImageView
            android:layout_gravity="center"
            android:layout_margin="@dimen/dp_10"
            android:layout_width="@dimen/dp_15"

            android:background="@mipmap/ic_left_white"
            android:layout_height="@dimen/dp_15" />
            </FrameLayout>
        <TextView
            android:layout_marginTop="@dimen/dp_10"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="邮件详情"
            android:textColor="#ffffff"
            android:textSize="@dimen/sp_17" />

            <LinearLayout
                android:visibility="gone"
                android:layout_marginTop="@dimen/dp_70"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_collection"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                     android:text="收藏"
                    android:drawablePadding="@dimen/dp_5"
                    android:drawableTop="@mipmap/mail_collect_icon"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_12"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_deletecolltion"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:drawablePadding="@dimen/dp_5"
                    android:drawableTop="@mipmap/mail_delet_icon"
                    android:text="删除"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_12"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_reply"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:drawablePadding="@dimen/dp_5"
                    android:drawableTop="@mipmap/mail_reply_icon"
                    android:layout_width="wrap_content"
                    android:text="回复"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_12"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_forward"
                    android:layout_weight="1"
                    android:drawablePadding="@dimen/dp_5"
                    android:drawableTop="@mipmap/mail_forward_icon"
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:text="转发"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_12"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </RelativeLayout>

        <ScrollView
            android:layout_marginTop="-90dp"
            android:layout_below="@+id/work_mail_rela_my1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:background="@drawable/liner_border_gb_qgl"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingBottom="@dimen/dp_20"
                    android:paddingRight="@dimen/dp_10"
                   >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/iv_remind"
                        android:layout_width="@dimen/dp_9"
                        android:layout_height="@dimen/dp_9"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:layout_marginTop="@dimen/dp_22"
                        android:background="@drawable/liner_yuan_qgl1" />
                <TextView
                    android:id="@+id/tv_theme"
                    android:text="通知主题"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginLeft="@dimen/dp_25"
                    android:layout_marginRight="@dimen/dp_20"
                    android:maxLines="1"
                    android:textColor="#313131"
                    android:textSize="@dimen/sp_16"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
                    </RelativeLayout>
                <LinearLayout
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/tv_receive_title2"
                            android:text="发件人"
                            android:textColor="#676767"
                            android:textSize="@dimen/dp_14"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/tv_send_person"
                            android:textColor="#313131"
                            android:textSize="@dimen/dp_14"
                            android:text="张三"
                            android:layout_marginLeft="@dimen/dp_20"
                            android:layout_toRightOf="@id/tv_receive_title2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/tv_send_person2"
                            android:textColor="#858585"
                            android:layout_below="@id/tv_send_person"
                            android:textSize="@dimen/dp_14"
                            android:text="张三"
                            android:layout_marginLeft="@dimen/dp_20"
                            android:layout_toRightOf="@id/tv_receive_title2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_marginTop="@dimen/dp_17"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/tv_receive_title"
                                android:text="收件人"
                                android:textColor="#676767"
                                android:textSize="@dimen/dp_14"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:id="@+id/tv_receive_person"
                                android:textColor="#313131"
                                android:textSize="@dimen/dp_14"
                                android:text="张三"
                                android:layout_marginLeft="@dimen/dp_20"
                                android:layout_toRightOf="@id/tv_receive_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        <TextView
                            android:visibility="gone"
                            android:layout_below="@id/tv_receive_person"
                            android:id="@+id/tv_receive_person2"
                            android:textColor="#858585"
                            android:textSize="@dimen/dp_14"
                            android:text="张三"
                            android:layout_marginLeft="@dimen/dp_20"
                            android:layout_toRightOf="@id/tv_receive_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/rl_chaosong"
                        android:layout_marginTop="@dimen/dp_17"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/tv_receive_title3"
                            android:text="抄送人"
                            android:textColor="#676767"
                            android:textSize="@dimen/dp_14"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/tv_chaosong_person"
                            android:textColor="#313131"
                            android:textSize="@dimen/dp_14"
                            android:text="----"
                            android:layout_marginLeft="@dimen/dp_20"
                            android:layout_toRightOf="@id/tv_receive_title3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:layout_below="@id/tv_chaosong_person"
                            android:id="@+id/tv_chaosong_person2"
                            android:textColor="#858585"
                            android:textSize="@dimen/dp_14"
                            android:text="----"
                            android:layout_marginLeft="@dimen/dp_20"
                            android:layout_toRightOf="@id/tv_receive_title3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_marginTop="@dimen/dp_17"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >
                        <TextView
                            android:id="@+id/tv_receive_title4"
                            android:text="   时间"
                            android:textColor="#676767"
                            android:textSize="@dimen/dp_14"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/tv_time"
                            android:layout_marginLeft="@dimen/dp_20"
                            android:text="07-09  9:00"
                            android:textColor="#858585"
                            android:textSize="@dimen/dp_14"
                            android:layout_toRightOf="@id/tv_receive_title4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </RelativeLayout>
                    </LinearLayout>
                    </LinearLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/dp_10"
                android:background="@drawable/liner_border_gb_qgl"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                >
                <TextView
                    android:id="@+id/tv_mail_details"
                    android:text="测试内容测试内容测试内容测试内容测试内容测试内容测试内容测试内容测试内容测试内容测试内容测试内容"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/dp_15"
                    android:minLines="10"
                    android:textColor="#313131"
                    android:textSize="@dimen/dp_14"
                    />
                <TextView
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_width="match_parent"
                    android:background="@color/color_xian"
                    android:layout_height="@dimen/dp_0_5" />
                <com.hulian.oa.views.MyListView
                    android:background="#FFFFFF"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_marginBottom="@dimen/dp_20"
                    android:id="@+id/work_mail_par_listview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                </com.hulian.oa.views.MyListView>
            </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <TextView
            android:visibility="gone"
            android:gravity="center_vertical"
            android:text="回复："
            android:layout_marginBottom="@dimen/dp_10"
            android:paddingLeft="@dimen/dp_10"
            android:textSize="@dimen/sp_12"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"
            android:background="@drawable/edit_background2"
            android:layout_width="match_parent"
            android:layout_height="35dp" />
    </RelativeLayout>
</LinearLayout>