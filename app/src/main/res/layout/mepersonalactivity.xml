<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EBEBEB"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/meperson_r1"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:background="#FFFFFF"
        android:gravity="center_vertical"
        android:layout_height="@dimen/dp_53">
        <RelativeLayout
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/relatout_bg1"
            android:padding="@dimen/dp_12">

            <ImageView
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_15"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@mipmap/ic_left" />

        </RelativeLayout>
        <TextView
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="个人信息"
            android:textColor="#ff313131"
            android:textSize="@dimen/sp_18" />

    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_marginTop="@dimen/dp_10"
                android:background="#FFFFFF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_30"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="头像"
                    android:textColor="#ff313131"
                    android:textSize="@dimen/sp_16"
                    />

                <FrameLayout
                    android:layout_marginBottom="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_30"
                    android:layout_alignParentRight="true"
                    android:id="@+id/iv_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="@dimen/dp_66"
                        android:layout_height="@dimen/dp_66"
                        android:background="@mipmap/bg_head1_img" />
                    <TextView
                        android:id="@+id/tv_type"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="报"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/sp_19" />
                </FrameLayout>


            </RelativeLayout>
            <LinearLayout
                android:orientation="vertical"
                android:background="#FFFFFF"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_marginRight="@dimen/dp_26"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_marginBottom="@dimen/dp_20"
                        android:layout_marginTop="@dimen/dp_20"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_30"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="登录名称"
                        android:textColor="#ff313131"
                        android:textSize="@dimen/sp_16"
                        />

                    <TextView
                        android:id="@+id/tv_me_person_login_name"
                        android:textSize="@dimen/sp_16"
                        android:layout_alignParentRight="true"
                        android:layout_marginBottom="@dimen/dp_20"
                        android:layout_marginTop="@dimen/dp_20"
                        android:text="17519491692"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </RelativeLayout>
                <View
                    android:background="#E3E3E3"
                    android:layout_marginLeft="@dimen/dp_21"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0_5"/>
                <RelativeLayout
                    android:layout_marginRight="@dimen/dp_26"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_marginBottom="@dimen/dp_20"
                        android:layout_marginTop="@dimen/dp_20"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_30"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="名字"
                        android:textColor="#ff313131"
                        android:textSize="@dimen/sp_16"
                        />

                    <EditText

                        android:text="青格乐"
                        android:id="@+id/tv_me_person_user_name"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="@dimen/dp_100"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:layout_centerVertical="true"
                        android:background="@null"
                        android:textColor="#313131"
                        android:textSize="@dimen/dp_16"
                        />

                </RelativeLayout>
                <View
                    android:background="#E3E3E3"
                    android:layout_marginLeft="@dimen/dp_21"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0_5"/>
                <RelativeLayout
                    android:layout_marginRight="@dimen/dp_26"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_marginBottom="@dimen/dp_20"
                        android:layout_marginTop="@dimen/dp_20"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_30"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="手机号"
                        android:textColor="#ff313131"
                        android:textSize="@dimen/sp_16"
                        />

                    <EditText
                        android:text="17519491692"
                        android:id="@+id/tv_me_person_phone"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="@dimen/dp_100"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:layout_centerVertical="true"
                        android:background="@null"
                        android:textColor="#313131"
                        android:textSize="@dimen/dp_16"
                        />

                </RelativeLayout>
                <View
                    android:background="#E3E3E3"
                    android:layout_marginLeft="@dimen/dp_21"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0_5"/>
                <RelativeLayout
                    android:layout_marginRight="@dimen/dp_26"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_marginBottom="@dimen/dp_20"
                        android:layout_marginTop="@dimen/dp_20"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_30"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="性别"
                        android:textColor="#ff313131"
                        android:textSize="@dimen/sp_16"
                        />

                    <RadioGroup
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:id="@+id/rd_group"
                        android:layout_width="wrap_content"
                        android:gravity="center_vertical|right"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <RadioButton
                            android:id="@+id/reboutn_one"
                            android:layout_marginRight="@dimen/dp_2"
                            android:tag="0"
                            android:checked="true"
                            android:text="男"
                            android:button="@null"
                            style="@style/button_tag_style"
                            android:layout_height="@dimen/dp_20"/>
                        <RadioButton
                            android:id="@+id/reboutn_two"
                            android:gravity="center"
                            android:text="女"
                            android:button="@null"
                            android:layout_height="@dimen/dp_20"
                            android:layout_marginLeft="@dimen/dp_2"
                            android:tag="1"
                            style="@style/button_tag_style"
                            />

                    </RadioGroup>

                </RelativeLayout>
                <View
                    android:background="#E3E3E3"
                    android:layout_marginLeft="@dimen/dp_21"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0_5"/>
                <RelativeLayout
                    android:layout_marginRight="@dimen/dp_26"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_marginBottom="@dimen/dp_20"
                        android:layout_marginTop="@dimen/dp_20"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_30"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="邮箱"
                        android:textColor="#ff313131"
                        android:textSize="@dimen/sp_16"
                        />

                    <TextView
                        android:id="@+id/tv_me_person_email"
                        android:textSize="@dimen/sp_16"
                        android:layout_alignParentRight="true"
                        android:layout_marginBottom="@dimen/dp_20"
                        android:layout_marginTop="@dimen/dp_20"
                        android:text="17519491692@126.com"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </RelativeLayout>

            </LinearLayout>
            <RelativeLayout
                android:id="@+id/re_change_password"
                android:layout_marginTop="@dimen/dp_10"
                android:background="#FFFFFF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginBottom="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_30"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="修改密码"
                    android:textColor="#ff313131"
                    android:textSize="@dimen/sp_16"
                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_26"
                    android:src="@mipmap/qj_selected_icon_qgl" />

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_40"
                android:layout_marginTop="@dimen/dp_20">
                <Button
                    android:layout_marginRight="@dimen/dp_70"
                    android:layout_marginLeft="@dimen/dp_70"
                    android:id="@+id/btn_save"
                    android:textSize="@dimen/sp_14"
                    android:text="保存"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_36"
                    android:gravity="center"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/l_leave_submit_bg"
                    android:textColor="@color/white"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="@dimen/dp_20"
                    android:layout_centerHorizontal="true"
                    />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>