<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <View
        android:id="@+id/view_v1"
        android:background="#4768F3"
        android:layout_width="match_parent"
        android:layout_height="20dp"/>
    <RelativeLayout
        android:layout_below="@+id/view_v1"
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:background="#4768F3"
        android:gravity="center_vertical"
        android:layout_height="@dimen/dp_45">

        <ImageView
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_width="@dimen/dp_15"
            android:id="@+id/iv_back"
            android:layout_centerVertical="true"
            android:background="@mipmap/ic_left_white"
            android:layout_height="@dimen/dp_15" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="版本信息"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_17" />
    </RelativeLayout>

    <LinearLayout
        android:layout_marginTop="90dp"
        android:layout_below="@+id/rl_title"
        android:id="@+id/liner_l1"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_launcher_me"
            />

        <TextView
            android:id="@+id/app_name"
            android:layout_marginTop="14dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="工作桌面"
            android:textColor="#ff101010"
            android:textSize="16sp"
            />

        <TextView
            android:id="@+id/app_version"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Version1.0.1"
            android:textColor="#ff101010"
            android:textSize="10sp"
            />
    </LinearLayout>


    <RelativeLayout
        android:layout_marginTop="80dp"
        android:id="@+id/rela_r1"
        android:layout_below="@+id/liner_l1"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <TextView
            android:layout_marginLeft="25dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="检查新版本"
            android:textColor="#ff101010"
            android:textSize="11sp"
            />

        <ImageView
            android:layout_marginRight="@dimen/dp_19"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/qj_selected_icon_qgl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <View
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:layout_below="@+id/rela_r1"
        android:background="#E3E3E3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"/>


    <TextView
        android:layout_marginBottom="30dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="吉林省智慧互联信息科技有限公司版权所有"
        android:textColor="#ff101010"
        android:textSize="9sp"
        />

</RelativeLayout>