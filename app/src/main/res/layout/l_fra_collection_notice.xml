<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.wuxiaolong.pullloadmorerecyclerview.PullLoadMoreRecyclerView
            android:id="@+id/lv_notice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!--qgl改的-->
        <RelativeLayout
            android:layout_centerVertical="true"
            android:visibility="gone"
            android:id="@+id/emptyBg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            >
            <ImageView
                android:id="@+id/emptyBg1"
                android:layout_width="@dimen/dp_260"
                android:layout_height="@dimen/dp_150"
                android:layout_centerInParent="true"
                android:contentDescription="@string/empty"
                android:src="@mipmap/ic_bg_empty"/>

            <TextView
                android:id="@+id/message_list_empty_hint"
                android:layout_width="fill_parent"
                android:text="暂无数据"
                android:textSize="@dimen/sp_9"
                android:layout_height="wrap_content"
                android:layout_below="@id/emptyBg1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dip"
                android:gravity="center"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_mengban"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#99ffffff"
            android:visibility="gone" />

        <fragment
            android:id="@+id/fg_order"
            android:name="com.hulian.oa.work.file.admin.activity.instruct.fragment.Fra_post_order_qgl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|bottom"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_marginBottom="@dimen/dp_20"
            tools:layout="@layout/fra_order_post_qgl" />
    </FrameLayout>



</RelativeLayout>