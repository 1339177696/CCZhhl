<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#101a62"
        android:gravity="center_vertical"
        android:layout_height="@dimen/dp_53">
        <ImageView
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_width="@dimen/dp_20"
            android:id="@+id/iv_back"
            android:layout_centerVertical="true"
            android:background="@mipmap/ic_left"
            android:layout_height="@dimen/dp_20" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="报销"
            android:textColor="#ffffff"
            android:textSize="@dimen/dp_18" />

    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_20"
            android:background="@color/colorwhite"
            android:orientation="vertical"
            >

            <RelativeLayout
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:id="@+id/rl_expense_reason"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40">
                <TextView
                    android:text="报销事由:"
                    android:textSize="@dimen/dp_14"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_centerVertical="true"
                    />
                <ImageView
                    android:visibility="gone"
                    android:id="@+id/iv_expense_more"
                    android:background="@mipmap/mine_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_20"
                    android:layout_centerVertical="true"
                    />
                <EditText
                    android:paddingRight="@dimen/dp_5"
                    android:layout_marginRight="@dimen/dp_20"
                    android:text="出差"
                    android:id="@+id/tv_expense_content"
                    android:layout_toLeftOf="@id/iv_expense_more"
                    android:layout_marginLeft="@dimen/dp_100"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:background="@null"
                    android:layout_centerVertical="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dp_14"
                    />
            </RelativeLayout>
            <View
                android:background="@color/colorText"
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_height="@dimen/dp_1"/>


            <RelativeLayout
                android:id="@+id/rl_duration"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:layout_alignParentStart="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:text="金额 (元):"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dp_14" />

                <EditText
                    android:id="@+id/et_expense_monkey"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_100"
                    android:layout_marginRight="@dimen/dp_20"
                    android:background="@null"
                    android:gravity="right"
                    android:inputType="number"
                    android:paddingRight="@dimen/dp_10"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="@dimen/dp_14" />
            </RelativeLayout>

            <View
                android:background="@color/colorText"
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_height="@dimen/dp_1"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:background="@color/colorwhite"
                >
                <TextView
                    android:id="@+id/tv_document_image"
                    android:text="发票上传:"
                    android:textSize="@dimen/dp_14"
                    android:textColor="@color/color_a_black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycler"
                    android:layout_below="@id/tv_document_image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:overScrollMode="never" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/ci_approved_pic"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:layout_marginLeft="@dimen/dp_20"
                android:gravity="center_vertical"
                android:layout_marginRight="@dimen/dp_20"
                >
                <TextView
                    android:id="@+id/tv_approved_person"
                    android:text="审批人:"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/dp_14"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
                <TextView
                    android:id="@+id/titleView"
                    android:background="@mipmap/mine_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    />
                <TextView
                    android:id="@+id/tv_opreator"
                    android:layout_toLeftOf="@id/titleView"
                    android:layout_marginLeft="@dimen/dp_40"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_centerVertical="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dp_14"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dp_14" />
            </RelativeLayout>
            <View
                android:background="@color/colorText"
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_height="@dimen/dp_1"/>
            <RelativeLayout
                android:id="@+id/ci_copy_pic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                >
                <TextView
                    android:layout_marginTop="@dimen/dp_4"
                    android:id="@+id/tv_copy_person_title"
                    android:text="抄送人:"
                    android:textSize="@dimen/dp_14"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/title11"
                    android:background="@mipmap/mine_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    />
                <TextView
                    android:id="@+id/copier"
                    android:layout_toLeftOf="@id/title11"
                    android:layout_marginLeft="@dimen/dp_40"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_centerVertical="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dp_14"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dp_14" />
            </RelativeLayout>
            <View
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/colorText"
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_height="@dimen/dp_1"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_40"
                android:layout_marginTop="@dimen/dp_20"
                >
                <TextView
                    android:id="@+id/tv_expense_submit"
                    android:textSize="@dimen/dp_16"
                    android:text="提交"
                    android:layout_width="@dimen/dp_140"
                    android:layout_height="@dimen/dp_40"
                    android:gravity="center"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/l_document_agree_bg"
                    android:textColor="@color/white"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="@dimen/dp_20"
                    android:layout_centerHorizontal="true"
                    />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>