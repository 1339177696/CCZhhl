<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorwhite"
    >
    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:layout_height="@dimen/dp_45">
        <ImageView
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_width="@dimen/dp_15"
            android:id="@+id/iv_back"
            android:layout_centerVertical="true"
            android:background="@mipmap/ic_left"
            android:layout_height="@dimen/dp_15" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="4dp"
            android:gravity="center"
            android:text="指令接收"
            android:textColor="#313131"
            android:textSize="@dimen/sp_17" />
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/details_img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
    </ScrollView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
        android:layout_marginLeft="@dimen/dp_22"
        android:id="@+id/tv_content1"
        android:layout_marginTop="@dimen/dp_10"
        android:drawableLeft="@mipmap/qj_leibie_icon_qgl"
        android:textSize="@dimen/dp_16"
        android:textColor="#313131"
        android:drawablePadding="@dimen/dp_2"
        android:text="指令内容"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
        <TextView
            android:layout_below="@id/tv_content1"
            android:layout_marginLeft="@dimen/dp_32"
            android:id="@+id/tv_content"
            android:layout_marginTop="@dimen/dp_15"
            android:textSize="@dimen/dp_13"
            android:textColor="#313131"
            android:drawablePadding="@dimen/dp_5"
            android:text="1111111"
            android:maxLines="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <TextView
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:id="@+id/tv_time"
            android:layout_marginTop="@dimen/dp_10"
            android:textSize="12sp"
            android:textColor="#A8A8A8"
            android:text="日期：2019-07-14"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

    </RelativeLayout>
    <TextView
        android:id="@+id/tv_receiver_instruct"
        android:textSize="@dimen/dp_18"
        android:text="接收"
        android:layout_width="@dimen/dp_260"
        android:layout_height="@dimen/dp_40"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/l_instruct_receiver_bg"
        android:textColor="@color/white"
        android:layout_marginBottom="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_10"
        />
</LinearLayout>