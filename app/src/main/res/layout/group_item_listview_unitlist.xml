<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/group_item_constr">

    <android.support.constraint.ConstraintLayout
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_20"
        android:paddingTop="@dimen/dp_15"
        android:paddingLeft="@dimen/dp_20"
        android:paddingRight="@dimen/dp_20"
        android:background="#F2F5FF">

        <FrameLayout
            android:id="@+id/iv_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <ImageView
                android:layout_width="@dimen/dp_45"
                android:layout_height="@dimen/dp_45"
                android:background="@mipmap/bg_agency_head" />

            <TextView
                android:id="@+id/tv_type"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="报"
                android:textColor="#0054CC"
                android:textSize="@dimen/sp_15" />
        </FrameLayout>

        <TextView
            android:layout_marginTop="@dimen/dp_3"
            android:layout_marginLeft="@dimen/dp_7"
            app:layout_constraintTop_toTopOf="@+id/iv_image"
            app:layout_constraintLeft_toRightOf="@+id/iv_image"
            android:id="@+id/depart_clock_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="王俊杰"
            android:textColor="#ff101010"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/tv_depart"
            android:layout_marginBottom="@dimen/dp_3"
            android:layout_marginLeft="@dimen/dp_7"
            app:layout_constraintBottom_toBottomOf="@+id/iv_image"
            app:layout_constraintLeft_toRightOf="@+id/iv_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设计部 "
            android:textColor="#ff37447a"
            android:textSize="@dimen/sp_12"
            />

        <TextView
            android:id="@+id/group_day"
            android:drawablePadding="@dimen/dp_8"
            android:drawableRight="@mipmap/right_icon"
            app:layout_constraintTop_toTopOf="@+id/iv_image"
            app:layout_constraintBottom_toBottomOf="@+id/iv_image"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="天"
            android:textColor="#ff37447a"
            android:textSize="@dimen/sp_12"
            />

        <View
            android:layout_width="0dp"
            android:layout_height="0.5dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_image"
            android:layout_marginTop="@dimen/dp_15"
            android:background="@color/line_color"
            />
    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>